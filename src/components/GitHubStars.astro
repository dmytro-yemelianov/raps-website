  href={`https://github.com/${repo}`} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="inline-flex items-center gap-2 px-4 py-2 bg-slate-900/50 border border-slate-800 hover:border-slate-600 rounded-lg text-sm text-slate-300 hover:text-white transition-all backdrop-blur-sm group"
