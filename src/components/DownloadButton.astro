<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('download-primary');
    const dropdown = document.getElementById('download-dropdown');
    const chevron = document.getElementById('download-chevron');
    const downloadText = document.getElementById('download-text');
    
    if (!button || !dropdown) return;

    // Detect platform
    const detectPlatform = () => {
      const ua = navigator.userAgent.toLowerCase();
      const platform = navigator.platform.toLowerCase();
      
      if (platform.includes('win') || ua.includes('windows')) return 'windows';
      if (platform.includes('mac') || ua.includes('mac')) return 'macos';
      if (platform.includes('linux') || ua.includes('linux')) return 'linux';
      return null;
    };

    const detectedPlatform = detectPlatform();
    
    // Update button text and highlight recommended
    if (detectedPlatform && downloadText) {
      const platformNames: Record<string, string> = {
        windows: 'Windows',
        macos: 'macOS', 
        linux: 'Linux'
      };
      downloadText.textContent = `Download for ${platformNames[detectedPlatform]}`;
      
      // Highlight recommended option
      const recommendedOption = dropdown.querySelector(`[data-platform="${detectedPlatform}"]`);
      if (recommendedOption) {
        const badge = recommendedOption.querySelector('.recommended-badge');
        badge?.classList.remove('hidden');
      }
    }

    // Toggle dropdown
    let isOpen = false;
    
    const toggleDropdown = (open?: boolean) => {
      isOpen = open !== undefined ? open : !isOpen;
      dropdown.classList.toggle('hidden', !isOpen);
      chevron?.classList.toggle('rotate-180', isOpen);
    };

    button.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleDropdown();
    });

    // Close on outside click
    document.addEventListener('click', (e) => {
      if (!dropdown.contains(e.target as Node) && !button.contains(e.target as Node)) {
        toggleDropdown(false);
      }
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') toggleDropdown(false);
    });

    // Copy command buttons
    document.querySelectorAll('[data-copy]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const command = btn.getAttribute('data-copy');
        if (!command) return;
        
        await navigator.clipboard.writeText(command);
        
        const copyIcon = btn.querySelector('.copy-icon');
        const checkIcon = btn.querySelector('.check-icon');
        
        copyIcon?.classList.add('hidden');
        checkIcon?.classList.remove('hidden');
        
        setTimeout(() => {
          copyIcon?.classList.remove('hidden');
          checkIcon?.classList.add('hidden');
        }, 2000);
      });
    });
  });
</script>

