---
/**
 * Shown on /uk/ pages when the content has not been translated yet.
 * Displays a dismissible info banner in Ukrainian.
 */
import { useTranslations } from '../i18n/utils';

const t = useTranslations('uk');
const englishUrl = Astro.url.pathname.replace(/^\/uk(?=\/|$)/, '') || '/';
---

<div
  id="fallback-banner"
  class="bg-amber-500/10 border border-amber-500/20 text-amber-200 text-sm px-4 py-3 flex items-center justify-between gap-4"
>
  <div class="flex items-center gap-2">
    <svg class="w-4 h-4 flex-shrink-0 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span>
      {t('fallback.banner')}{' '}
      <a href={englishUrl} class="underline underline-offset-2 hover:text-amber-100 transition-colors">
        {t('fallback.view_english')}
      </a>
    </span>
  </div>
  <button
    id="dismiss-fallback"
    class="p-1 text-amber-400 hover:text-amber-200 transition-colors flex-shrink-0"
    aria-label="Закрити"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
</div>

<script>
  document.getElementById('dismiss-fallback')?.addEventListener('click', () => {
    document.getElementById('fallback-banner')?.remove();
  });
</script>
