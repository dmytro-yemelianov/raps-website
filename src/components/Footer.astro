---
import GitHubIcon from './icons/GitHubIcon.astro';
import DiscordIcon from './icons/DiscordIcon.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: '/quickstart', label: 'Quick Start' },
    { href: 'https://github.com/dmytro-yemelianov/raps/releases', label: 'Download', external: true },
    { href: '/changelog', label: 'Changelog' },
    { href: 'https://github.com/dmytro-yemelianov/raps/issues', label: 'Report Issue', external: true },
  ],
  resources: [
    { href: '/blog', label: 'Blog' },
    { href: '/tools/manual-tax-calculator', label: 'Tax Calculator' },
    { href: '/rss.xml', label: 'RSS Feed' },
    { href: '/atom.xml', label: 'Atom Feed' },
    { href: 'https://aps.autodesk.com', label: 'APS Portal', external: true },
    { href: 'https://aps.autodesk.com/developer/documentation', label: 'APS Docs', external: true },
  ],
  connect: [
    { href: 'https://github.com/dmytro-yemelianov', label: 'GitHub', external: true },
    { href: 'https://discord.gg/PXRabMhWTY', label: 'Discord', external: true },
    { href: 'https://www.linkedin.com/in/dmytro-yemelianov/', label: 'LinkedIn', external: true },
    { href: 'https://twitter.com/dyemelianov', label: 'Twitter', external: true },
  ],
};
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4 group">
          <span class="text-2xl group-hover:scale-110 transition-transform">ðŸŒ¼</span>
          <span class="font-display font-bold text-lg text-white group-hover:text-rapeseed-400 transition-colors">RAPS</span>
        </a>
        <p class="text-sm text-slate-400 mb-4">
          ðŸŒ¼ RAPS (rapeseed) â€” Rust Autodesk Platform Services CLI.
          Bringing CI/CD to APS with speed and reliability.
        </p>
        <div class="flex items-center gap-4">
          <a
            href="https://github.com/dmytro-yemelianov/raps"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <GitHubIcon />
          </a>
          <a
            href="https://discord.gg/PXRabMhWTY"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="Discord"
          >
            <DiscordIcon />
          </a>
          <a
            href="https://www.linkedin.com/in/dmytro-yemelianov/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="/rss.xml"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="RSS Feed"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
            </svg>
          </a>
          <a
            href="/atom.xml"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="Atom Feed"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">Product</h3>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Connect Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">Connect</h3>
        <ul class="space-y-2">
          {footerLinks.connect.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-400">
        Â© {currentYear} Dmytro Yemelianov. Licensed under Apache-2.0.
      </p>
      <p class="text-sm text-slate-500">
        Built with 
        <a href="https://www.rust-lang.org/" target="_blank" rel="noopener noreferrer" class="text-rust-500 hover:text-rust-600">Rust</a>
        . Not affiliated with Autodesk, Inc.
      </p>
    </div>
  </div>
</footer>
