---
import GitHubIcon from './icons/GitHubIcon.astro';
import DiscordIcon from './icons/DiscordIcon.astro';
import { getLangFromUrl, useTranslations, getLocalizedUrl } from '../i18n/utils';
import { getLatestRelease } from '../data/releases.js';

const lang = getLangFromUrl(Astro.url, Astro.currentLocale);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const latestRelease = getLatestRelease();
const buildDate = new Date().toISOString().split('T')[0];

const footerLinks = {
  product: [
    { href: getLocalizedUrl(lang, '/quickstart'), label: t('footer.quickstart') },
    { href: 'https://github.com/dmytro-yemelianov/raps/releases', label: t('footer.download'), external: true },
    { href: getLocalizedUrl(lang, '/changelog'), label: t('footer.changelog') },
    { href: 'https://github.com/dmytro-yemelianov/raps/issues', label: t('footer.report_issue'), external: true },
    { href: getLocalizedUrl(lang, '/security'), label: 'Security' },
  ],
  resources: [
    { href: getLocalizedUrl(lang, '/blog'), label: t('footer.blog') },
    { href: getLocalizedUrl(lang, '/tools/manual-tax-calculator'), label: t('footer.tax_calculator') },
    { href: '/rss.xml', label: t('footer.rss_feed') },
    { href: '/atom.xml', label: t('footer.atom_feed') },
    { href: 'https://aps.autodesk.com', label: t('footer.aps_portal'), external: true },
    { href: 'https://aps.autodesk.com/developer/documentation', label: t('footer.aps_docs'), external: true },
  ],
  connect: [
    { href: 'https://github.com/dmytro-yemelianov', label: 'GitHub', external: true },
    { href: 'https://discord.gg/PXRabMhWTY', label: 'Discord', external: true },
    { href: 'https://www.linkedin.com/in/dmytro-yemelianov/', label: 'LinkedIn', external: true },
    { href: 'https://twitter.com/dyemelianov', label: 'Twitter', external: true },
  ],
};
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href={getLocalizedUrl(lang, '/')} class="flex items-center gap-3 mb-4 group">
          <span class="text-2xl group-hover:scale-110 transition-transform">ðŸŒ¼</span>
          <span class="font-display font-bold text-lg text-white group-hover:text-rapeseed-400 transition-colors">RAPS</span>
        </a>
        <p class="text-sm text-slate-400 mb-4">
          ðŸŒ¼ {t('footer.brand')}
        </p>
        <div class="flex items-center gap-4">
          <a
            href="https://github.com/dmytro-yemelianov/raps"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <GitHubIcon />
          </a>
          <a
            href="https://discord.gg/PXRabMhWTY"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="Discord"
          >
            <DiscordIcon />
          </a>
          <a
            href="https://www.linkedin.com/in/dmytro-yemelianov/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="/rss.xml"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="RSS Feed"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
            </svg>
          </a>
          <a
            href="/atom.xml"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="Atom Feed"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">{t('footer.section.product')}</h3>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">{t('footer.section.resources')}</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Connect Links -->
      <div>
        <h3 class="text-sm font-display font-semibold text-white mb-3">{t('footer.section.connect')}</h3>
        <ul class="space-y-2">
          {footerLinks.connect.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-400">
        {t('footer.copyright').replace('{year}', String(currentYear))}
      </p>
      <p class="text-sm text-slate-500 font-mono">
        <a href={getLocalizedUrl(lang, '/changelog')} class="text-rapeseed-400 hover:text-rapeseed-300 transition-colors">v{latestRelease.version}</a>
        <span class="mx-1 text-slate-600">Â·</span>
        <span class="text-slate-600">{buildDate}</span>
      </p>
      <p class="text-sm text-slate-500">
        {t('footer.built_with')}{' '}
        <a href="https://www.rust-lang.org/" target="_blank" rel="noopener noreferrer" class="text-rust-500 hover:text-rust-600">Rust</a>
        . {t('footer.not_affiliated')}
      </p>
    </div>
  </div>
</footer>
