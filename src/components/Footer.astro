---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: '/docs', label: 'Documentation' },
    { href: 'https://github.com/dmytro-yemelianov/raps/releases', label: 'Download', external: true },
    { href: '/changelog', label: 'Changelog' },
    { href: 'https://github.com/dmytro-yemelianov/raps/issues', label: 'Report Issue', external: true },
  ],
  resources: [
    { href: '/blog', label: 'Blog' },
    { href: 'https://aps.autodesk.com', label: 'APS Portal', external: true },
    { href: 'https://aps.autodesk.com/developer/documentation', label: 'APS Docs', external: true },
  ],
  connect: [
    { href: 'https://github.com/dmytro-yemelianov', label: 'GitHub', external: true },
    { href: 'https://www.linkedin.com/in/dmytro-yemelianov/', label: 'LinkedIn', external: true },
    { href: 'https://twitter.com/dyemelianov', label: 'Twitter', external: true },
  ],
};
---

<footer class="bg-slate-900 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-accent-500 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-sm">R</span>
          </div>
          <span class="font-semibold text-lg text-white">RAPS</span>
        </a>
        <p class="text-sm text-slate-400 mb-4">
          Bringing CI/CD to Autodesk Platform Services.
          Built with Rust for speed and reliability.
        </p>
        <div class="flex items-center gap-4">
          <a
            href="https://github.com/dmytro-yemelianov/raps"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/in/dmytro-yemelianov/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-3">Product</h3>
        <ul class="space-y-2">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-3">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Connect Links -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-3">Connect</h3>
        <ul class="space-y-2">
          {footerLinks.connect.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-slate-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-400">
        Â© {currentYear} Dmytro Yemelianov. Licensed under Apache-2.0.
      </p>
      <p class="text-sm text-slate-500">
        Built with 
        <a href="https://www.rust-lang.org/" target="_blank" rel="noopener noreferrer" class="text-rust-500 hover:text-rust-600">Rust</a>
        . Not affiliated with Autodesk, Inc.
      </p>
    </div>
  </div>
</footer>
