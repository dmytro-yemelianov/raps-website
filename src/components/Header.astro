<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenuCloseButton = document.getElementById('mobile-menu-close-button');
    const body = document.body;

    const toggleMenu = () => {
      body.classList.toggle('mobile-menu-open');
    };

    mobileMenuButton?.addEventListener('click', toggleMenu);
    mobileMenuCloseButton?.addEventListener('click', toggleMenu);

    // Touch-accessible desktop dropdown menus
    // On touch devices, first tap opens the dropdown, second tap follows the link
    const dropdownToggles = document.querySelectorAll('nav.hidden.md\\:flex .group > button');
    dropdownToggles.forEach(toggle => {
      toggle.addEventListener('click', (e) => {
        const parent = toggle.closest('.group');
        const dropdown = parent?.querySelector('[class*="absolute"]');
        if (!dropdown) return;

        // Close all other dropdowns
        dropdownToggles.forEach(other => {
          if (other !== toggle) {
            const otherDropdown = other.closest('.group')?.querySelector('[class*="absolute"]');
            otherDropdown?.classList.remove('dropdown-open');
          }
        });

        dropdown.classList.toggle('dropdown-open');
      });
    });

    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
      if (!(e.target as Element).closest('nav.hidden.md\\:flex .group')) {
        document.querySelectorAll('.dropdown-open').forEach(d => d.classList.remove('dropdown-open'));
      }
    });

    // Close menu when clicking outside (on backdrop)
    document.getElementById('mobile-menu-backdrop')?.addEventListener('click', toggleMenu);
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && body.classList.contains('mobile-menu-open')) {
        toggleMenu();
      }
    });
    
    // Close menu on window resize to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768 && body.classList.contains('mobile-menu-open')) {
        toggleMenu();
      }
    });
  });
</script>

<style is:global>
  #mobile-menu {
    display: none; /* Hidden by default */
    position: fixed;
    inset: 0;
    z-index: 100;
  }
  
  body.mobile-menu-open #mobile-menu {
    display: block; /* Show when menu is open */
  }
  
  #mobile-menu-backdrop {
    z-index: 90;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  body.mobile-menu-open #mobile-menu-backdrop {
    opacity: 1;
  }

  #mobile-menu > nav {
    z-index: 100;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile */
  }

  body.mobile-menu-open #mobile-menu > nav {
    transform: translateX(0);
  }
  
  body.mobile-menu-open {
    overflow: hidden;
  }

  /* Touch-accessible dropdown - visible via click in addition to hover */
  .dropdown-open {
    opacity: 1 !important;
    visibility: visible !important;
  }
</style>
