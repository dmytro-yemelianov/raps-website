                    item.label === 'Developer' && !isSubmenuActive(item.submenu) && 'text-emerald-400 hover:text-emerald-300',
                    item.label === 'Project' && !isSubmenuActive(item.submenu) && 'text-blue-400 hover:text-blue-300',
