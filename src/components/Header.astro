    ]
  },
];

const currentPath = Astro.url.pathname;

// Helper to check if current path matches nav item (locale-aware)
const isActive = (href: string) => {
  // Strip locale prefix from current path for comparison
  const normPath = currentPath.replace(/^\/uk(?=\/|$)/, '') || '/';
  // Strip locale prefix from href for comparison
  const normHref = href.replace(/^\/uk(?=\/|$)/, '') || '/';
  if (normHref === '/') return normPath === '/';
  if (normHref === '/cookbook') return normPath.startsWith('/cookbook');
  if (normHref === '/docs') return normPath.startsWith('/docs');
  if (normHref === '/tools') return normPath.startsWith('/tools');
  if (normHref === '/resources') return normPath.startsWith('/resources');
  if (normHref === '/glossary') return normPath.startsWith('/glossary');
  if (normHref === '/blog') return normPath.startsWith('/blog');
  if (normHref === '/products') return normPath.startsWith('/products');
  return normPath === normHref || normPath === normHref + '/';
};

// Helper to check if submenu contains active item
const isSubmenuActive = (submenu: any[]) => {
  return submenu.some(item => isActive(item.href));
};
