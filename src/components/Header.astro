---
// Main navigation items with submenus
const navItems = [
  { href: '/', label: 'Home' },
  {
    href: '/quickstart',
    label: 'Quick Start',
    color: 'rapeseed'
  },
  { href: '/blog', label: 'Blog' },
  {
    label: 'Developer',
    submenu: [
      { href: '/docs', label: 'Documentation', icon: 'ðŸ“š', description: 'Complete CLI reference' },
      { href: '/tools', label: 'Interactive Tools', icon: 'ðŸ› ï¸', description: 'OAuth, URN, token helpers' },
      { href: '/resources', label: 'Developer Resources', icon: 'ðŸ“–', description: 'Cheat sheets, guides, examples' },
      { href: '/glossary', label: 'Glossary', icon: 'ðŸ“—', description: 'APS, CAD & DevOps terminology' },
      { href: '/api-coverage', label: 'API Coverage', icon: 'ðŸ”Œ', description: 'Supported APS endpoints' },
    ]
  },
  {
    label: 'Project',
    submenu: [
      { href: '/roadmap', label: 'Roadmap', icon: 'ðŸ—ºï¸', description: 'Upcoming features' },
      { href: '/changelog', label: 'Changelog', icon: 'ðŸ“‹', description: 'Release history' },
      { href: '/about', label: 'About', icon: 'â„¹ï¸', description: 'Project background' },
    ]
  },
];

const currentPath = Astro.url.pathname;

// Helper to check if current path matches nav item
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  if (href === '/docs') return currentPath.startsWith('/docs');
  if (href === '/tools') return currentPath.startsWith('/tools');
  if (href === '/resources') return currentPath.startsWith('/resources');
  if (href === '/glossary') return currentPath.startsWith('/glossary');
  if (href === '/blog') return currentPath.startsWith('/blog');
  return currentPath === href || currentPath === href + '/';
};

// Helper to check if submenu contains active item
const isSubmenuActive = (submenu: any[]) => {
  return submenu.some(item => isActive(item.href));
};
---

<header class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-md border-b border-slate-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <span class="text-2xl group-hover:scale-110 transition-transform">ðŸŒ¼</span>
        <span class="font-display font-bold text-lg text-white group-hover:text-rapeseed-400 transition-colors">
          RAPS
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        {navItems.map((item) => {
          if (item.submenu) {
            // Dropdown menu item
            return (
              <div class="relative group">
                <button
                  class:list={[
                    'flex items-center gap-1 px-4 py-2 rounded-lg text-sm font-medium transition-all',
                    isSubmenuActive(item.submenu)
                      ? 'bg-slate-800 text-white'
                      : 'text-slate-400 hover:text-white hover:bg-slate-800/50',
                    item.label === 'Developer' && !isSubmenuActive(item.submenu) && 'text-emerald-400 hover:text-emerald-300',
                    item.label === 'Project' && !isSubmenuActive(item.submenu) && 'text-blue-400 hover:text-blue-300',
                  ]}
                >
                  {item.label}
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>

                <!-- Dropdown Menu -->
                <div class="absolute top-full left-0 mt-2 w-80 bg-slate-900 border border-slate-700 rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                  <div class="p-2">
                    {item.submenu.map((subitem) => (
                      <a
                        href={subitem.href}
                        class:list={[
                          'flex items-start gap-3 px-3 py-3 rounded-lg transition-all hover:bg-slate-800/50',
                          isActive(subitem.href) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:text-white'
                        ]}
                      >
                        <span class="text-lg mt-0.5">{subitem.icon}</span>
                        <div class="flex-1 min-w-0">
                          <div class="font-medium text-white">{subitem.label}</div>
                          <div class="text-xs text-slate-400 mt-0.5">{subitem.description}</div>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            );
          } else {
            // Regular menu item
            return (
              <a
                href={item.href}
                class:list={[
                  'px-4 py-2 rounded-lg text-sm font-medium transition-all',
                  isActive(item.href)
                    ? 'bg-slate-800 text-white'
                    : 'text-slate-400 hover:text-white hover:bg-slate-800/50',
                  item.color === 'rapeseed' && !isActive(item.href) && 'text-rapeseed-400 hover:text-rapeseed-300',
                  item.color === 'emerald' && !isActive(item.href) && 'text-emerald-400 hover:text-emerald-300',
                ]}
              >
                {item.label}
              </a>
            );
          }
        })}
      </nav>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-3">
        <!-- Global Search - Hidden on mobile, shows in mobile menu -->
        <div class="hidden md:block" id="header-search"></div>
        
        <a
          href="https://github.com/dmytro-yemelianov/raps"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:flex items-center gap-2 px-3 py-1.5 text-sm text-slate-400 hover:text-white transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
          </svg>
          <span>GitHub</span>
        </a>
        <a
          href="https://github.com/dmytro-yemelianov/raps/releases"
          class="px-4 py-2 bg-primary-600 hover:bg-primary-500 text-white text-sm font-medium rounded-lg transition-colors"
        >
          Download
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        type="button"
        class="md:hidden p-2 text-slate-400 hover:text-white transition-colors"
        aria-label="Toggle menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" id="menu-open-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation Panel -->
  <!-- Moved outside max-w-6xl container to allow full-page display -->
  <div id="mobile-menu" class="md:hidden">
    <!-- Backdrop -->
    <div id="mobile-menu-backdrop" class="fixed inset-0 bg-black/50 backdrop-blur-sm"></div>
    
    <!-- Menu Content -->
    <nav class="fixed top-0 left-0 right-0 bottom-0 h-screen h-dvh sm:left-auto sm:right-0 sm:w-80 bg-slate-900 sm:border-l border-slate-800 p-4 space-y-3 overflow-y-auto">
      <!-- Header -->
      <div class="flex items-center justify-between pb-2">
        <h2 class="font-bold text-base text-white">Menu</h2>
        <button type="button" id="mobile-menu-close-button" class="p-1.5 text-slate-400 hover:text-white">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Quick Actions -->
      <div class="flex gap-2">
        <a
          href="https://github.com/dmytro-yemelianov/raps"
          target="_blank"
          rel="noopener noreferrer"
          class="flex-1 flex items-center justify-center p-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
          </svg>
        </a>
        <a
          href="https://github.com/dmytro-yemelianov/raps/releases"
          class="flex-1 flex items-center justify-center p-2 bg-rapeseed-600 hover:bg-rapeseed-500 text-white rounded-lg transition-colors text-center"
          aria-label="Download"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2.25a.75.75 0 01.75.75v11.19l3.47-3.47a.75.75 0 111.06 1.06l-4.75 4.75a.75.75 0 01-1.06 0l-4.75-4.75a.75.75 0 111.06-1.06l3.47 3.47V3a.75.75 0 01.75-.75zM3.75 18a.75.75 0 000 1.5h16.5a.75.75 0 000-1.5H3.75z"/></svg>
        </a>
      </div>
      
      <!-- Navigation Items -->
      <div class="space-y-1">
        {navItems.map((item) => {
          if (item.submenu) {
            // Mobile submenu section with collapsible behavior
            return (
              <details class="group">
                <summary class:list={[
                  'flex items-center justify-between px-4 py-2 rounded-lg text-sm font-semibold cursor-pointer select-none transition-colors',
                  isSubmenuActive(item.submenu) ? 'bg-slate-800 text-white' : 'text-slate-300 hover:text-white hover:bg-slate-800/50',
                  item.label === 'Developer' && !isSubmenuActive(item.submenu) && 'text-emerald-400',
                  item.label === 'Project' && !isSubmenuActive(item.submenu) && 'text-blue-400',
                ]}>
                  {item.label}
                  <svg class="w-4 h-4 transition-transform group-open:rotate-180" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </summary>
                <div class="mt-1 space-y-0.5 pl-4">
                  {item.submenu.map((subitem) => (
                    <a
                      href={subitem.href}
                      class:list={[
                        'flex items-center gap-2 px-4 py-2 rounded-lg transition-colors',
                        isActive(subitem.href)
                          ? 'bg-slate-800/50 text-white'
                          : 'text-slate-400 hover:text-white hover:bg-slate-800/30'
                      ]}
                    >
                      <span class="text-base">{subitem.icon}</span>
                      <div class="flex-1">
                        <div class="text-sm font-medium">{subitem.label}</div>
                        <div class="text-xs text-slate-500">{subitem.description}</div>
                      </div>
                    </a>
                  ))}
                </div>
              </details>
            );
          } else {
            // Regular mobile menu item
            return (
              <a
                href={item.href}
                class:list={[
                  'block px-4 py-2 rounded-lg text-sm font-semibold transition-colors',
                  isActive(item.href)
                    ? 'bg-slate-800 text-white'
                    : 'text-slate-400 hover:text-white hover:bg-slate-800/50',
                  item.color === 'rapeseed' && !isActive(item.href) && 'text-rapeseed-400',
                  item.color === 'emerald' && !isActive(item.href) && 'text-emerald-400',
                ]}
              >
                {item.label}
              </a>
            );
          }
        })}
      </div>
      
      <!-- Footer Links -->
      <div class="pt-3 border-t border-slate-800">
        <div class="flex items-center gap-4 text-sm">
          <a href="https://discord.gg/PXRabMhWTY" target="_blank" class="text-slate-400 hover:text-white transition-colors">Discord</a>
          <a href="/rss.xml" class="text-slate-400 hover:text-white transition-colors">RSS</a>
          <a href="/atom.xml" class="text-slate-400 hover:text-white transition-colors">Atom</a>
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenuCloseButton = document.getElementById('mobile-menu-close-button');
    const body = document.body;

    const toggleMenu = () => {
      body.classList.toggle('mobile-menu-open');
    };

    mobileMenuButton.addEventListener('click', toggleMenu);
    mobileMenuCloseButton.addEventListener('click', toggleMenu);

    // Close menu when clicking outside (on backdrop)
    document.getElementById('mobile-menu-backdrop')?.addEventListener('click', toggleMenu);
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && body.classList.contains('mobile-menu-open')) {
        toggleMenu();
      }
    });
    
    // Close menu on window resize to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768 && body.classList.contains('mobile-menu-open')) {
        toggleMenu();
      }
    });
  });
</script>

<style is:global>
  #mobile-menu {
    display: none; /* Hidden by default */
    position: fixed;
    inset: 0;
    z-index: 100;
  }
  
  body.mobile-menu-open #mobile-menu {
    display: block; /* Show when menu is open */
  }
  
  #mobile-menu-backdrop {
    z-index: 90;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  body.mobile-menu-open #mobile-menu-backdrop {
    opacity: 1;
  }

  #mobile-menu > nav {
    z-index: 100;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile */
  }

  body.mobile-menu-open #mobile-menu > nav {
    transform: translateX(0);
  }
  
  body.mobile-menu-open {
    overflow: hidden;
  }
</style>