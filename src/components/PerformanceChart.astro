---
interface Props {
  title: string;
  subtitle?: string;
  data: {
    label: string;
    value: number;
    color?: string;
    suffix?: string;
  }[];
  maxValue?: number;
}

const { title, subtitle, data, maxValue: providedMaxValue } = Astro.props;

const maxValue = providedMaxValue || Math.max(...data.map(d => d.value)) * 1.1;
---

<div class="performance-chart-wrapper my-8 p-6 bg-slate-900/50 border border-slate-700/50 rounded-2xl">
  <div class="mb-6">
    <h3 class="text-xl font-bold text-white mb-1">{title}</h3>
    {subtitle && <p class="text-slate-400 text-sm">{subtitle}</p>}
  </div>

  <div class="space-y-4">
    {data.map((item) => (
      <div class="group">
        <div class="flex justify-between items-end mb-1.5">
          <span class="text-sm font-medium text-slate-300 group-hover:text-white transition-colors">
            {item.label}
          </span>
          <span class="text-sm font-bold text-white">
            {item.value}{item.suffix || ''}
          </span>
        </div>
        <div class="h-3 w-full bg-slate-800 rounded-full overflow-hidden border border-slate-700/30">
          <div 
            class:list={[
              "h-full rounded-full transition-all duration-1000 ease-out shadow-lg",
              item.color || "bg-gradient-to-r from-blue-500 to-indigo-600"
            ]}
            style={`width: ${(item.value / maxValue) * 100}%`}
          />
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .performance-chart-wrapper {
    perspective: 1000px;
  }
  
  /* Animate bars on load */
  @keyframes grow {
    from { width: 0; }
  }
  
  .group div > div {
    animation: grow 1s ease-out forwards;
  }
</style>
