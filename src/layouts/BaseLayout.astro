---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { 
  title, 
  description = 'ðŸŒ¼ RAPS (rapeseed) â€” Rust Autodesk Platform Services CLI. A comprehensive command-line interface for APS, written in Rust.',
  image = '/og-image.svg',
  article = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | RAPS</title>
    <meta name="title" content={`${title} | RAPS`} />
    <meta name="description" content={description} />
    <meta name="author" content="Dmytro Yemelianov" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | RAPS`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | RAPS`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts - Distinctive typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Satoshi for headlines, General Sans for body, JetBrains Mono for code -->
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,900&f[]=general-sans@400,500,600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    
    <!-- JSON-LD structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "ðŸŒ¼ RAPS",
        "alternateName": "rapeseed",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "Windows, macOS, Linux",
        "author": {
          "@type": "Person",
          "name": "Dmytro Yemelianov",
          "url": "https://www.linkedin.com/in/dmytro-yemelianov/"
        },
        "description": "ðŸŒ¼ RAPS (rapeseed) â€” Rust Autodesk Platform Services CLI. A comprehensive command-line interface for APS, written in Rust.",
        "license": "https://opensource.org/licenses/Apache-2.0",
        "url": "https://rapscli.xyz",
        "downloadUrl": "https://github.com/dmytro-yemelianov/raps/releases"
      }
    </script>
    
    <!-- Theme initialization script (runs before page renders to avoid flash) -->
    <script is:inline>
      // Initialize theme
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.classList.toggle('light', theme === 'light');
      
      // Initialize emoji visibility
      const showEmoji = localStorage.getItem('showEmoji') !== 'false'; // default true
      if (!showEmoji) {
        document.documentElement.classList.add('hide-emoji');
      }
    </script>
    
    <style is:global>
      /* Light theme styles - using CSS custom properties to avoid @apply circular dependencies */
      html.light {
        color-scheme: light;
      }
      
      html.light body {
        background-color: rgb(248 250 252); /* slate-50 */
        color: rgb(15 23 42); /* slate-900 */
      }
      
      html.light header {
        background-color: rgba(255, 255, 255, 0.8);
        border-color: rgb(226 232 240); /* slate-200 */
      }
      
      html.light .text-white {
        color: rgb(15 23 42); /* slate-900 */
      }
      
      html.light .text-slate-400 {
        color: rgb(71 85 105); /* slate-600 */
      }
      
      html.light .text-slate-500 {
        color: rgb(100 116 139); /* slate-500 */
      }
      
      html.light .text-slate-300 {
        color: rgb(51 65 85); /* slate-700 */
      }
      
      html.light .bg-slate-950 {
        background-color: rgb(248 250 252); /* slate-50 */
      }
      
      html.light .bg-slate-900\/50,
      html.light .bg-slate-900\/30 {
        background-color: rgb(241 245 249); /* slate-100 */
      }
      
      html.light .bg-slate-900 {
        background-color: rgb(241 245 249); /* slate-100 */
      }
      
      html.light .bg-slate-800 {
        background-color: rgb(226 232 240); /* slate-200 */
      }
      
      html.light .bg-slate-800\/50 {
        background-color: rgb(241 245 249); /* slate-100 */
      }
      
      html.light .border-slate-800 {
        border-color: rgb(226 232 240); /* slate-200 */
      }
      
      html.light .border-slate-700 {
        border-color: rgb(203 213 225); /* slate-300 */
      }
      
      html.light .hover\:bg-slate-700:hover {
        background-color: rgb(203 213 225); /* slate-300 */
      }
      
      html.light .hover\:bg-slate-800\/50:hover {
        background-color: rgb(226 232 240); /* slate-200 */
      }
      
      html.light .hover\:bg-slate-900\/30:hover {
        background-color: rgb(226 232 240); /* slate-200 */
      }
      
      /* Emoji visibility toggle */
      html.hide-emoji .emoji {
        display: none;
      }
    </style>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100 font-sans antialiased">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
