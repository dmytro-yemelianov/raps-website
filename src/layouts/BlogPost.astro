---
import BaseLayout from './BaseLayout.astro';
import { getCollection } from 'astro:content';
import GlossaryText from '../components/GlossaryText.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    author?: string;
    tags?: string[];
    image?: string;
    series?: string;
    seriesOrder?: number;
  };
}

const { frontmatter } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

// Get related posts (same tags)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((post) => {
    if (!frontmatter.tags) return false;
    return post.data.tags?.some((tag: string) => frontmatter.tags?.includes(tag));
  })
  .filter((post) => post.data.title !== frontmatter.title)
  .slice(0, 3);
---

<BaseLayout 
  title={frontmatter.title} 
  description={frontmatter.description}
  image={frontmatter.image}
  article={true}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <time class="text-sm text-slate-500" datetime={frontmatter.pubDate.toISOString()}>
            {formatDate(frontmatter.pubDate)}
          </time>
          {frontmatter.updatedDate && (
            <span class="text-sm text-slate-600">
              (Updated: {formatDate(frontmatter.updatedDate)})
            </span>
          )}
          {frontmatter.series && (
            <span class="px-2 py-0.5 text-xs font-medium bg-accent-500/10 text-accent-400 rounded">
              {frontmatter.series} #{frontmatter.seriesOrder}
            </span>
          )}
        </div>
        
        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4 leading-tight">
          {frontmatter.title}
        </h1>
        
        <!-- Description -->
        <p class="text-lg text-slate-400">
          {frontmatter.description}
        </p>
        
        <!-- Tags -->
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-6">
            {frontmatter.tags.map((tag: string) => (
              <span class="px-3 py-1 text-sm bg-slate-800 text-slate-300 rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}
        
        <!-- Author -->
        <div class="flex items-center gap-4 mt-8 pt-8 border-t border-slate-800">
          <img 
            src="/images/profile-128.webp" 
            alt="Dmytro Yemelianov - Author"
            class="w-12 h-12 rounded-full object-cover"
            loading="lazy"
          />
          <div>
            <div class="font-medium text-white">{frontmatter.author || 'Dmytro Yemelianov'}</div>
            <div class="text-sm text-slate-400">Autodesk Expert Elite â€¢ APS Developer</div>
          </div>
        </div>
      </header>
      
      <!-- Article Content -->
      <div class="prose prose-invert prose-slate max-w-none
        prose-headings:text-white prose-headings:font-semibold
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-slate-300 prose-p:leading-relaxed
        prose-a:text-primary-400 prose-a:no-underline hover:prose-a:text-primary-300
        prose-strong:text-white prose-strong:font-semibold
        prose-code:text-primary-300 prose-code:bg-slate-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded
        prose-pre:bg-slate-900 prose-pre:border prose-pre:border-slate-800
        prose-blockquote:border-primary-500 prose-blockquote:bg-slate-900/50 prose-blockquote:py-1 prose-blockquote:px-6 prose-blockquote:rounded-r-lg
        prose-ul:text-slate-300 prose-ol:text-slate-300
        prose-li:marker:text-slate-500
        prose-img:rounded-xl prose-img:border prose-img:border-slate-800
      ">
        <GlossaryText>
          <slot />
        </GlossaryText>
      </div>
      
      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-slate-800">
        <!-- Share -->
        <div class="flex items-center justify-between flex-wrap gap-4 mb-12">
          <div class="text-sm text-slate-400">
            Share this article:
          </div>
          <div class="flex items-center gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-colors"
              aria-label="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-colors"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
          <div>
            <h3 class="text-lg font-semibold text-white mb-6">Related Articles</h3>
            <div class="grid gap-4">
              {relatedPosts.map((post) => (
                <a
                  href={`/blog/${post.id}`}
                  class="p-4 bg-slate-900/50 border border-slate-800 rounded-lg hover:border-primary-500/50 transition-colors group"
                >
                  <div class="font-medium text-white group-hover:text-primary-400 transition-colors">
                    {post.data.title}
                  </div>
                  <div class="text-sm text-slate-400 mt-1">
                    {post.data.description}
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
        
        <!-- Back to blog -->
        <div class="mt-12 text-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to all articles
          </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>
