---
import BaseLayout from './BaseLayout.astro';
import { getCollection } from 'astro:content';
import GlossaryText from '../components/GlossaryText.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    author?: string;
    tags?: string[];
    image?: string;
    series?: string;
    seriesOrder?: number;
    featured?: boolean;
    draft?: boolean;
  };
}

const { frontmatter } = Astro.props;

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

// Get related posts with improved algorithm
const allPosts = await getCollection('blog');

// Calculate relevance score for related posts
const relatedPosts = allPosts
  .filter((post) => post.data.title !== frontmatter.title && !post.data.draft)
  .map((post) => {
    let score = 0;
    
    // Score based on common tags
    const commonTags = frontmatter.tags?.filter((tag: string) => 
      post.data.tags?.includes(tag)
    ) || [];
    score += commonTags.length * 3;
    
    // Boost score if it's also featured
    if (post.data.featured && frontmatter.featured) {
      score += 2;
    }
    
    // Score based on same author
    if (post.data.author === frontmatter.author) {
      score += 1;
    }
    
    // Score based on recency (newer posts get slight boost)
    const daysDiff = Math.abs(new Date(post.data.pubDate).getTime() - new Date(frontmatter.pubDate).getTime()) / (1000 * 60 * 60 * 24);
    if (daysDiff < 30) {
      score += 0.5;
    }
    
    return { post, score };
  })
  .filter(({ score }) => score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, 3)
  .map(({ post }) => post);
---

<BaseLayout 
  title={frontmatter.title} 
  description={frontmatter.description}
  image={frontmatter.image}
  article={true}
>
  <article class="py-16 sm:py-24">
    <div class="max-w-3xl mx-auto px-4 sm:px-6">
      
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <time class="text-sm text-slate-500" datetime={new Date(frontmatter.pubDate).toISOString()}>
            {formatDate(new Date(frontmatter.pubDate))}
          </time>
          {frontmatter.updatedDate && (
            <span class="text-sm text-slate-600">
              (Updated: {formatDate(frontmatter.updatedDate)})
            </span>
          )}
          {frontmatter.series && (
            <span class="px-2 py-0.5 text-xs font-medium bg-accent-500/10 text-accent-400 rounded">
              {frontmatter.series} #{frontmatter.seriesOrder}
            </span>
          )}
        </div>
        
        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4 leading-tight">
          {frontmatter.title}
        </h1>
        
        <!-- Description -->
        <p class="text-lg text-slate-400">
          {frontmatter.description}
        </p>
        
        <!-- Tags -->
        {frontmatter.tags && frontmatter.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-6">
            {frontmatter.tags.map((tag: string) => (
              <span class="px-3 py-1 text-sm bg-slate-800 text-slate-300 rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}
        
        <!-- Author -->
        <div class="flex items-center gap-4 mt-8 pt-8 border-t border-slate-800">
          <img 
            src="/images/profile-128.webp" 
            alt="Dmytro Yemelianov - Author"
            class="w-12 h-12 rounded-full object-cover"
            loading="lazy"
          />
          <div>
            <div class="font-medium text-white">{frontmatter.author || 'Dmytro Yemelianov'}</div>
            <div class="text-sm text-slate-400">Autodesk Expert Elite • APS Developer</div>
          </div>
        </div>
      </header>
      
      <!-- Article Content -->
      <div class="prose prose-invert prose-slate max-w-none
        prose-headings:text-white prose-headings:font-semibold
        prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-4
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-slate-300 prose-p:leading-relaxed
        prose-a:text-primary-400 prose-a:no-underline hover:prose-a:text-primary-300
        prose-strong:text-white prose-strong:font-semibold
        prose-blockquote:border-primary-500 prose-blockquote:bg-slate-900/50 prose-blockquote:py-1 prose-blockquote:px-6 prose-blockquote:rounded-r-lg
        prose-ul:text-slate-300 prose-ol:text-slate-300
        prose-li:marker:text-slate-500
        prose-img:rounded-xl prose-img:border prose-img:border-slate-800
      ">
        <GlossaryText>
          <slot />
        </GlossaryText>
      </div>
      
      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-slate-800">
        <!-- Share -->
        <div class="flex items-center justify-between flex-wrap gap-4 mb-12">
          <div class="text-sm text-slate-400">
            Share this article:
          </div>
          <div class="flex items-center gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-colors"
              aria-label="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-colors"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
          <div>
            <div class="flex items-center gap-3 mb-6">
              <svg class="w-5 h-5 text-rapeseed-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
              </svg>
              <h3 class="text-xl font-semibold text-white">Related Articles</h3>
            </div>
            <div class="grid gap-6">
              {relatedPosts.map((post) => (
                <article class="group">
                  <a
                    href={`/blog/${post.id.replace(/\.mdx?$/, '')}`}
                    class="block p-6 bg-gradient-to-r from-slate-900/50 to-slate-800/50 border border-slate-800 rounded-xl hover:border-rapeseed-400/30 transition-all hover:shadow-lg hover:shadow-rapeseed-500/5"
                  >
                    <div class="flex items-start justify-between mb-3">
                      <div class="flex items-center gap-3 text-sm text-slate-500">
                        <time datetime={new Date(post.data.pubDate).toISOString()}>
                          {formatDate(new Date(post.data.pubDate))}
                        </time>
                        <span>•</span>
                        <span>5 min read</span>
                        {post.data.featured && (
                          <>
                            <span>•</span>
                            <span class="px-2 py-0.5 bg-rapeseed-500/20 text-rapeseed-400 text-xs font-medium rounded-full">
                              Featured
                            </span>
                          </>
                        )}
                      </div>
                    </div>
                    
                    <h4 class="font-semibold text-white mb-3 group-hover:text-rapeseed-400 transition-colors leading-tight">
                      {post.data.title}
                    </h4>
                    
                    <p class="text-slate-400 text-sm mb-4 line-clamp-2 leading-relaxed">
                      {post.data.description}
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <div class="flex flex-wrap gap-2">
                        {post.data.tags?.slice(0, 2).map((tag: string) => (
                          <span class="px-2 py-1 text-xs font-medium bg-slate-800 text-slate-300 rounded">
                            {tag}
                          </span>
                        ))}
                        {(post.data.tags?.length || 0) > 2 && (
                          <span class="px-2 py-1 text-xs font-medium text-slate-500 rounded">
                            +{(post.data.tags?.length || 0) - 2} more
                          </span>
                        )}
                      </div>
                      
                      <div class="flex items-center gap-1 text-sm text-rapeseed-400 group-hover:text-rapeseed-300">
                        <span>Read article</span>
                        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
            
            <!-- More Articles CTA -->
            <div class="mt-8 p-6 bg-gradient-to-r from-rapeseed-950/50 to-amber-950/50 border border-rapeseed-900/50 rounded-xl text-center">
              <h4 class="text-lg font-semibold text-white mb-2">Looking for more insights?</h4>
              <p class="text-slate-400 mb-4">Explore our complete collection of APS development tutorials and DevOps guides.</p>
              <a
                href="/blog"
                class="inline-flex items-center gap-2 px-6 py-3 bg-rapeseed-500/20 hover:bg-rapeseed-500/30 text-rapeseed-400 hover:text-rapeseed-300 rounded-lg transition-colors border border-rapeseed-500/30"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0l-4-4m4 4l-4 4"/>
                </svg>
                Browse All Articles
              </a>
            </div>
          </div>
        )}
        
        <!-- Back to blog -->
        <div class="mt-12 text-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-primary-400 hover:text-primary-300 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to all articles
          </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>

