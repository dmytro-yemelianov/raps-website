---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FallbackBanner from '../components/FallbackBanner.astro';
import { getCollection } from 'astro:content';
import { stripLocalePrefix, getLangFromUrl, useTranslations, getLocalizedUrl, filterByLocale } from '../i18n/utils';
import '../styles/globals.css';

interface Props {
  title: string;
  description: string;
  tagline?: string;
  icon?: string;
  github: string;
  version?: string;
  currentSlug?: string;
}

const {
  title,
  description,
  tagline,
  icon = 'ðŸ“¦',
  github,
  version,
  currentSlug = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const lang = getLangFromUrl(Astro.url, Astro.currentLocale);
const t = useTranslations(lang);

// Get products for current locale (with fallback to English)
const allProducts = filterByLocale(await getCollection('products'), lang);
const getProductSlug = (p: any) => stripLocalePrefix((p.slug || p.id || '').replace(/\.mdx?$/, ''));
const otherProducts = allProducts.filter(p => getProductSlug(p) !== currentSlug);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <title>{title} | RAPS Products</title>
    <meta name="title" content={`${title} | RAPS Products`} />
    <meta name="description" content={description} />
    <meta name="author" content="Dmytro Yemelianov" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | RAPS Products`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.png', Astro.site)} />
    <meta property="og:site_name" content="RAPS CLI" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={new URL('/og-image.png', Astro.site)} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,900&f[]=general-sans@400,500,600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100 font-sans antialiased">
    <Header />
    {lang === 'uk' && <FallbackBanner />}

    <main class="pt-20">
      <!-- Hero Section -->
      <div class="bg-gradient-to-b from-slate-900 to-slate-950 border-b border-slate-800">
        <div class="max-w-4xl mx-auto px-6 py-12">
          <div class="flex items-center gap-4 mb-4">
            <span class="text-5xl">{icon}</span>
            <div>
              <h1 class="text-3xl sm:text-4xl font-display font-bold text-white">{title}</h1>
              {tagline && <p class="text-lg text-slate-400 mt-1">{tagline}</p>}
            </div>
          </div>

          <p class="text-slate-300 text-lg mb-6">{description}</p>

          <div class="flex flex-wrap items-center gap-4">
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
              </svg>
              {t('product.view_github')}
            </a>
            {version && (
              <span class="px-3 py-1 bg-rapeseed-500/20 text-rapeseed-400 text-sm font-medium rounded-full">
                v{version}
              </span>
            )}
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="max-w-4xl mx-auto px-6 py-12">
        <article class="product-content">
          <slot />
        </article>

        <!-- Related Products Section -->
        <section class="mt-16 pt-8 border-t border-slate-800">
          <h2 class="text-xl font-display font-bold text-white mb-6">{t('product.related')}</h2>

          <div class="grid sm:grid-cols-2 gap-4">
            <!-- Main RAPS CLI -->
            <a
              href={getLocalizedUrl(lang, '/docs')}
              class="group p-4 bg-slate-900/50 border border-slate-800 rounded-lg hover:border-rapeseed-500/50 transition-colors"
            >
              <div class="flex items-center gap-3 mb-2">
                <span class="text-2xl">ðŸŒ¼</span>
                <div>
                  <div class="font-medium text-white group-hover:text-rapeseed-400 transition-colors">RAPS CLI</div>
                  <div class="text-xs text-slate-500">Main CLI tool</div>
                </div>
              </div>
              <p class="text-sm text-slate-400">Rust-based CLI for Autodesk Platform Services</p>
            </a>

            <!-- Other Products -->
            {otherProducts.map(product => (
              <a
                href={`/products/${getProductSlug(product)}`}
                class="group p-4 bg-slate-900/50 border border-slate-800 rounded-lg hover:border-rapeseed-500/50 transition-colors"
              >
                <div class="flex items-center gap-3 mb-2">
                  <span class="text-2xl">{product.data.icon || 'ðŸ“¦'}</span>
                  <div>
                    <div class="font-medium text-white group-hover:text-rapeseed-400 transition-colors">{product.data.title}</div>
                    {product.data.tagline && <div class="text-xs text-slate-500">{product.data.tagline}</div>}
                  </div>
                </div>
                <p class="text-sm text-slate-400 line-clamp-2">{product.data.description}</p>
              </a>
            ))}
          </div>
        </section>
      </div>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* Product page prose styling - similar to docs */
  .product-content {
    @apply text-slate-300 leading-relaxed;
  }

  .product-content h2 {
    @apply text-2xl font-display font-bold text-white mt-12 mb-4 pb-2 border-b border-slate-800;
  }

  .product-content h3 {
    @apply text-xl font-semibold text-white mt-8 mb-3;
  }

  .product-content h4 {
    @apply text-lg font-semibold text-slate-200 mt-6 mb-2;
  }

  .product-content p {
    @apply mb-4;
  }

  .product-content a {
    @apply text-rapeseed-400 hover:text-rapeseed-300 underline underline-offset-2;
  }

  .product-content ul {
    @apply list-disc list-inside mb-4 space-y-1;
  }

  .product-content ol {
    @apply list-decimal list-inside mb-4 space-y-1;
  }

  .product-content li {
    @apply text-slate-300;
  }

  .product-content code:not(pre code) {
    @apply bg-slate-800 text-rapeseed-400 px-1.5 py-0.5 rounded text-sm font-mono;
  }

  .product-content pre {
    @apply bg-slate-900 border border-slate-800 rounded-lg p-4 overflow-x-auto mb-4;
  }

  .product-content pre code {
    @apply text-sm font-mono;
  }

  .product-content blockquote {
    @apply border-l-4 border-rapeseed-500 pl-4 italic text-slate-400 my-4;
  }

  .product-content table {
    @apply w-full border-collapse mb-4;
  }

  .product-content th {
    @apply bg-slate-800 text-left px-4 py-2 font-semibold text-white border border-slate-700;
  }

  .product-content td {
    @apply px-4 py-2 border border-slate-700;
  }

  .product-content tr:nth-child(even) {
    @apply bg-slate-900/50;
  }

  .product-content hr {
    @apply border-slate-800 my-8;
  }

  .product-content strong {
    @apply font-semibold text-white;
  }
</style>
