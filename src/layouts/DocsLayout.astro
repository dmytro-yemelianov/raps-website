---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  currentSlug?: string;
}

const { 
  title, 
  description = 'RAPS CLI Documentation',
  currentSlug = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Get all docs
const allDocs = await getCollection('docs');

// Helper to check current section
const getCurrentSection = () => {
  const doc = allDocs.find(d => d.slug === currentSlug);
  if (doc?.data.section) return doc.data.section;
  if (currentSlug.startsWith('cookbook-aec')) return 'cookbook-aec';
  if (currentSlug.startsWith('cookbook-acc')) return 'cookbook-acc';
  if (currentSlug.startsWith('cookbook-mfg') || currentSlug === 'cookbook-manufacturing') return 'cookbook-mfg';
  if (currentSlug.startsWith('cookbook-media')) return 'cookbook-media';
  return null;
};

const currentSection = getCurrentSection();

// Navigation structure
const navSections = [
  {
    id: 'getting-started',
    title: 'Getting Started',
    items: allDocs
      .filter(doc => doc.data.section === 'getting-started')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'commands',
    title: 'Commands',
    items: allDocs
      .filter(doc => doc.data.section === 'commands')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'guides',
    title: 'Guides',
    items: allDocs
      .filter(doc => doc.data.section === 'guides')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'reference',
    title: 'Reference',
    items: allDocs
      .filter(doc => doc.data.section === 'reference')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'cookbook-aec',
    title: 'AEC & BIM',
    items: [
      allDocs.find(d => d.slug === 'cookbook-aec'),
      ...allDocs.filter(d => d.slug.startsWith('cookbook-aec-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'cookbook-acc',
    title: 'Construction',
    items: [
      allDocs.find(d => d.slug === 'cookbook-construction'),
      ...allDocs.filter(d => d.slug.startsWith('cookbook-acc-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'cookbook-mfg',
    title: 'Manufacturing',
    items: [
      allDocs.find(d => d.slug === 'cookbook-manufacturing'),
      ...allDocs.filter(d => d.slug.startsWith('cookbook-mfg-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'cookbook-media',
    title: 'Media & Assets',
    items: [
      allDocs.find(d => d.slug === 'cookbook-media'),
      ...allDocs.filter(d => d.slug.startsWith('cookbook-media-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
];

const cleanTitle = (title: string) => {
  return title
    .replace(/^Cookbook:\s*/i, '')
    .replace(/^Recipe:\s*/i, '');
};

// Check if section contains current page
const sectionContainsCurrent = (sectionId: string) => {
  return currentSection === sectionId;
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <title>{title} | RAPS Docs</title>
    <meta name="title" content={`${title} | RAPS Docs`} />
    <meta name="description" content={description} />
    <meta name="author" content="Dmytro Yemelianov" />
    
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | RAPS Docs`} />
    <meta property="og:description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,900&f[]=general-sans@400,500,600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100 font-sans antialiased">
    <Header />
    
    <div class="flex">
      <!-- Sidebar -->
      <aside class="hidden lg:block w-64 fixed left-0 top-16 bottom-0 overflow-y-auto border-r border-slate-800/50 bg-slate-950">
        <nav class="py-6 px-4" id="docs-nav">
          {navSections.map(section => (
            section.items.length > 0 && (
              <div class="nav-section mb-1" data-section={section.id}>
                <button
                  class:list={[
                    "nav-toggle w-full flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md transition-colors",
                    sectionContainsCurrent(section.id)
                      ? "text-white"
                      : "text-slate-400 hover:text-slate-200 hover:bg-slate-800/30"
                  ]}
                  data-expanded={sectionContainsCurrent(section.id) ? "true" : "false"}
                >
                  <span>{section.title}</span>
                  <svg
                    class:list={[
                      "nav-chevron w-4 h-4 transition-transform duration-200",
                      sectionContainsCurrent(section.id) ? "rotate-180" : ""
                    ]}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                
                <ul
                  class:list={[
                    "nav-items mt-1 ml-3 border-l border-slate-800 transition-all duration-200",
                    sectionContainsCurrent(section.id) ? "" : "hidden"
                  ]}
                >
                  {section.items.map(doc => (
                    <li>
                      <a
                        href={`/docs/${doc.slug}`}
                        class:list={[
                          "block pl-4 pr-3 py-1.5 text-sm transition-colors border-l -ml-px",
                          currentSlug === doc.slug
                            ? "text-rapeseed-400 border-rapeseed-400 font-medium"
                            : "text-slate-500 border-transparent hover:text-slate-300 hover:border-slate-600"
                        ]}
                        data-current={currentSlug === doc.slug ? "true" : undefined}
                      >
                        {cleanTitle(doc.data.title)}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )
          ))}
        </nav>
      </aside>
      
      <!-- Mobile menu button -->
      <button 
        id="docs-menu-toggle"
        class="lg:hidden fixed bottom-6 left-6 z-50 p-3 bg-rapeseed-500 text-slate-900 rounded-full shadow-lg hover:bg-rapeseed-400 transition-colors"
        aria-label="Toggle navigation"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Mobile sidebar -->
      <div id="docs-mobile-sidebar" class="lg:hidden fixed inset-0 z-40 hidden">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="docs-sidebar-backdrop"></div>
        <aside class="absolute left-0 top-0 bottom-0 w-72 bg-slate-900 border-r border-slate-800 overflow-y-auto">
          <div class="p-4 border-b border-slate-800 flex justify-between items-center">
            <span class="font-semibold text-white">Documentation</span>
            <button id="docs-menu-close" class="p-2 text-slate-400 hover:text-white">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <nav class="py-4 px-3">
            {navSections.map(section => (
              section.items.length > 0 && (
                <div class="nav-section mb-1" data-section={section.id}>
                  <button
                    class:list={[
                      "nav-toggle w-full flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md transition-colors",
                      sectionContainsCurrent(section.id)
                        ? "text-white"
                        : "text-slate-400 hover:text-slate-200 hover:bg-slate-800/30"
                    ]}
                    data-expanded={sectionContainsCurrent(section.id) ? "true" : "false"}
                  >
                    <span>{section.title}</span>
                    <svg
                      class:list={[
                        "nav-chevron w-4 h-4 transition-transform duration-200",
                        sectionContainsCurrent(section.id) ? "rotate-180" : ""
                      ]}
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  
                  <ul
                    class:list={[
                      "nav-items mt-1 ml-3 border-l border-slate-700 transition-all duration-200",
                      sectionContainsCurrent(section.id) ? "" : "hidden"
                    ]}
                  >
                    {section.items.map(doc => (
                      <li>
                        <a
                          href={`/docs/${doc.slug}`}
                          class:list={[
                            "block pl-4 pr-3 py-1.5 text-sm transition-colors border-l -ml-px",
                            currentSlug === doc.slug
                              ? "text-rapeseed-400 border-rapeseed-400 font-medium"
                              : "text-slate-500 border-transparent hover:text-slate-300 hover:border-slate-600"
                          ]}
                        >
                          {cleanTitle(doc.data.title)}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )
            ))}
          </nav>
        </aside>
      </div>
      
      <!-- Main content -->
      <main class="flex-1 lg:ml-64 min-h-screen">
        <div class="max-w-4xl mx-auto px-6 py-12">
          <slot />
        </div>
      </main>
    </div>
    
    <!-- Mermaid.js -->
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
    
    <script>
      // Mobile sidebar
      const toggle = document.getElementById('docs-menu-toggle');
      const sidebar = document.getElementById('docs-mobile-sidebar');
      const close = document.getElementById('docs-menu-close');
      const backdrop = document.getElementById('docs-sidebar-backdrop');
      
      toggle?.addEventListener('click', () => {
        sidebar?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });
      
      [close, backdrop].forEach(el => {
        el?.addEventListener('click', () => {
          sidebar?.classList.add('hidden');
          document.body.style.overflow = '';
        });
      });
      
      // Collapsible navigation
      document.querySelectorAll('.nav-toggle').forEach(button => {
        button.addEventListener('click', () => {
          const section = button.closest('.nav-section');
          const items = section?.querySelector('.nav-items');
          const chevron = button.querySelector('.nav-chevron');
          const isExpanded = button.getAttribute('data-expanded') === 'true';
          
          if (items) {
            items.classList.toggle('hidden', isExpanded);
            button.setAttribute('data-expanded', isExpanded ? 'false' : 'true');
            chevron?.classList.toggle('rotate-180', !isExpanded);
          }
        });
      });
      
      // Scroll current nav item into view
      document.addEventListener('DOMContentLoaded', () => {
        const currentLink = document.querySelector('#docs-nav a[data-current="true"]');
        if (currentLink) {
          currentLink.scrollIntoView({ block: 'center', behavior: 'instant' });
        }
      });
      
      // Add copy buttons to code blocks
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.docs-content pre').forEach(pre => {
          // Skip mermaid blocks
          if (pre.getAttribute('data-language') === 'mermaid') return;
          
          // Create wrapper
          const wrapper = document.createElement('div');
          wrapper.className = 'code-block-wrapper';
          pre.parentNode.insertBefore(wrapper, pre);
          wrapper.appendChild(pre);
          
          // Get language
          const lang = pre.getAttribute('data-language') || '';
          
          // Create header
          const header = document.createElement('div');
          header.className = 'code-block-header';
          
          // Language label
          if (lang) {
            const langLabel = document.createElement('span');
            langLabel.className = 'code-lang';
            langLabel.textContent = lang;
            header.appendChild(langLabel);
          } else {
            header.appendChild(document.createElement('span'));
          }
          
          // Copy button
          const copyBtn = document.createElement('button');
          copyBtn.className = 'copy-btn';
          copyBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>`;
          copyBtn.title = 'Copy code';
          
          copyBtn.addEventListener('click', async () => {
            const code = pre.querySelector('code')?.textContent || pre.textContent || '';
            await navigator.clipboard.writeText(code);
            copyBtn.innerHTML = `<svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>`;
            setTimeout(() => {
              copyBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>`;
            }, 2000);
          });
          
          header.appendChild(copyBtn);
          wrapper.insertBefore(header, pre);
        });
      });
      
      // Mermaid diagrams
      document.addEventListener('DOMContentLoaded', async () => {
        if (typeof mermaid !== 'undefined') {
          mermaid.initialize({
            startOnLoad: false,
            theme: 'dark',
            themeVariables: {
              primaryColor: '#1e293b',
              primaryBorderColor: '#f5c542',
              primaryTextColor: '#f1f5f9',
              secondaryColor: '#0f172a',
              secondaryBorderColor: '#334155',
              secondaryTextColor: '#94a3b8',
              tertiaryColor: '#1e293b',
              lineColor: '#64748b',
              textColor: '#f1f5f9',
              mainBkg: '#1e293b',
              nodeBorder: '#f5c542',
              clusterBkg: '#0f172a',
              clusterBorder: '#334155',
              nodeTextColor: '#f1f5f9',
              actorBorder: '#f5c542',
              actorBkg: '#1e293b',
              actorTextColor: '#f1f5f9',
              signalColor: '#64748b',
              noteBorderColor: '#f5c542',
              noteBkgColor: '#1e293b',
            },
            flowchart: { curve: 'basis', padding: 20 },
            sequence: { actorMargin: 50, useMaxWidth: true },
          });
          
          const mermaidBlocks = document.querySelectorAll('pre[data-language="mermaid"]');
          
          for (let i = 0; i < mermaidBlocks.length; i++) {
            const preEl = mermaidBlocks[i];
            const codeEl = preEl.querySelector('code');
            const diagramCode = codeEl ? codeEl.textContent : preEl.textContent || '';
            
            const container = document.createElement('div');
            container.className = 'mermaid-diagram';
            
            try {
              const { svg } = await mermaid.render(`mermaid-${i}`, diagramCode);
              container.innerHTML = svg;
              preEl.parentNode.replaceChild(container, preEl);
            } catch (e) {
              console.error('Mermaid error:', e);
              container.innerHTML = `<div class="text-red-400 text-sm p-4">Diagram error: ${e.message}</div>`;
              preEl.parentNode.replaceChild(container, preEl);
            }
          }
        }
      });
    </script>
  </body>
</html>

<style is:global>
  /* Docs prose styling */
  .docs-content {
    @apply text-slate-300 leading-relaxed;
  }
  
  .docs-content h1 {
    @apply text-3xl sm:text-4xl font-display font-bold text-white mb-6;
  }
  
  .docs-content h2 {
    @apply text-2xl font-display font-bold text-white mt-12 mb-4 pb-2 border-b border-slate-800;
  }
  
  .docs-content h3 {
    @apply text-xl font-semibold text-white mt-8 mb-3;
  }
  
  .docs-content h4 {
    @apply text-lg font-semibold text-slate-200 mt-6 mb-2;
  }
  
  .docs-content p {
    @apply mb-4;
  }
  
  .docs-content a {
    @apply text-rapeseed-400 hover:text-rapeseed-300 underline underline-offset-2;
  }
  
  .docs-content ul {
    @apply list-disc list-inside mb-4 space-y-1;
  }
  
  .docs-content ol {
    @apply list-decimal list-inside mb-4 space-y-1;
  }
  
  .docs-content li {
    @apply text-slate-300;
  }
  
  .docs-content code:not(pre code) {
    @apply bg-slate-800 text-rapeseed-400 px-1.5 py-0.5 rounded text-sm font-mono;
  }
  
  /* Code blocks with header */
  .docs-content .code-block-wrapper {
    @apply mb-4 rounded-lg overflow-hidden border border-slate-800;
  }
  
  .docs-content .code-block-header {
    @apply flex items-center justify-between px-4 py-2 bg-slate-800/80 border-b border-slate-700/50;
  }
  
  .docs-content .code-lang {
    @apply text-xs font-medium text-slate-400 uppercase tracking-wider;
  }
  
  .docs-content .copy-btn {
    @apply p-1.5 text-slate-400 hover:text-white hover:bg-slate-700 rounded transition-colors;
  }
  
  .docs-content .code-block-wrapper pre {
    @apply mb-0 border-0 rounded-none;
  }
  
  .docs-content pre {
    @apply bg-slate-900 border border-slate-800 rounded-lg p-4 overflow-x-auto mb-4;
  }
  
  .docs-content pre code {
    @apply text-sm font-mono;
  }
  
  .docs-content blockquote {
    @apply border-l-4 border-rapeseed-500 pl-4 italic text-slate-400 my-4;
  }
  
  .docs-content table {
    @apply w-full border-collapse mb-4;
  }
  
  .docs-content th {
    @apply bg-slate-800 text-left px-4 py-2 font-semibold text-white border border-slate-700;
  }
  
  .docs-content td {
    @apply px-4 py-2 border border-slate-700;
  }
  
  .docs-content tr:nth-child(even) {
    @apply bg-slate-900/50;
  }
  
  .docs-content hr {
    @apply border-slate-800 my-8;
  }
  
  .docs-content strong {
    @apply font-semibold text-white;
  }
  
  /* Mermaid diagrams */
  .mermaid-diagram {
    @apply bg-slate-900/50 border border-slate-700/50 rounded-xl p-6 my-6 overflow-x-auto flex justify-center;
  }
  
  .mermaid-diagram svg {
    max-width: 100%;
    height: auto;
  }
</style>
