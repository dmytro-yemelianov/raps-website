---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
  currentSlug?: string;
}

const { 
  title, 
  description = 'RAPS CLI Documentation',
  currentSlug = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Get all docs and organize by section
const allDocs = await getCollection('docs');

// Helper to check if current page is in a cookbook sub-category
const currentCookbookCategory = (() => {
  if (currentSlug.startsWith('cookbook-aec')) return 'aec';
  if (currentSlug.startsWith('cookbook-acc')) return 'construction';
  if (currentSlug.startsWith('cookbook-mfg') || currentSlug.startsWith('cookbook-manufacturing')) return 'manufacturing';
  if (currentSlug.startsWith('cookbook-media')) return 'media';
  return null;
})();

// Cookbook subcategories with their items
const cookbookCategories = [
  {
    id: 'aec',
    title: 'AEC & BIM',
    icon: 'üèóÔ∏è',
    hub: allDocs.find(d => d.slug === 'cookbook-aec'),
    items: allDocs
      .filter(d => d.slug.startsWith('cookbook-aec-'))
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'construction',
    title: 'Construction (ACC)',
    icon: 'üë∑',
    hub: allDocs.find(d => d.slug === 'cookbook-construction'),
    items: allDocs
      .filter(d => d.slug.startsWith('cookbook-acc-'))
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'manufacturing',
    title: 'Manufacturing',
    icon: 'üè≠',
    hub: allDocs.find(d => d.slug === 'cookbook-manufacturing'),
    items: allDocs
      .filter(d => d.slug.startsWith('cookbook-mfg-'))
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    id: 'media',
    title: 'Media & Assets',
    icon: 'üé¨',
    hub: allDocs.find(d => d.slug === 'cookbook-media'),
    items: allDocs
      .filter(d => d.slug.startsWith('cookbook-media-'))
      .sort((a, b) => a.data.order - b.data.order)
  },
];

// Define navigation structure (non-cookbook sections)
const navSections = [
  {
    title: 'Getting Started',
    icon: 'üöÄ',
    items: allDocs
      .filter(doc => doc.data.section === 'getting-started')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    title: 'Commands',
    icon: '‚å®Ô∏è',
    items: allDocs
      .filter(doc => doc.data.section === 'commands')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    title: 'Guides',
    icon: 'üìñ',
    items: allDocs
      .filter(doc => doc.data.section === 'guides')
      .sort((a, b) => a.data.order - b.data.order)
  },
  {
    title: 'Reference',
    icon: 'üìö',
    items: allDocs
      .filter(doc => doc.data.section === 'reference')
      .sort((a, b) => a.data.order - b.data.order)
  },
];
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <title>{title} | RAPS Docs</title>
    <meta name="title" content={`${title} | RAPS Docs`} />
    <meta name="description" content={description} />
    <meta name="author" content="Dmytro Yemelianov" />
    
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | RAPS Docs`} />
    <meta property="og:description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,900&f[]=general-sans@400,500,600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100 font-sans antialiased">
    <Header />
    
    <div class="flex">
      <!-- Sidebar -->
      <aside class="hidden lg:block w-72 fixed left-0 top-16 bottom-0 overflow-y-auto border-r border-slate-800 bg-slate-950/50 backdrop-blur-sm">
        <nav class="p-6 space-y-6">
          {/* Regular sections */}
          {navSections.map(section => (
            section.items.length > 0 && (
              <div>
                <h3 class="flex items-center gap-2 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">
                  <span>{section.icon}</span>
                  {section.title}
                </h3>
                <ul class="space-y-1">
                  {section.items.map(doc => (
                    <li>
                      <a
                        href={`/docs/${doc.slug}`}
                        class:list={[
                          "block px-3 py-2 rounded-lg text-sm transition-colors",
                          currentSlug === doc.slug 
                            ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium" 
                            : "text-slate-300 hover:text-white hover:bg-slate-800/50"
                        ]}
                      >
                        {doc.data.icon && <span class="mr-2">{doc.data.icon}</span>}
                        {doc.data.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )
          ))}
          
          {/* Cookbook section with subcategories */}
          <div>
            <h3 class="flex items-center gap-2 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">
              <span>üç≥</span>
              Cookbook
            </h3>
            <ul class="space-y-1">
              {cookbookCategories.map(category => (
                <li class="cookbook-category" data-category={category.id}>
                  {/* Category header with toggle */}
                  <button
                    class:list={[
                      "w-full flex items-center justify-between px-3 py-2 rounded-lg text-sm transition-colors group cookbook-toggle",
                      currentCookbookCategory === category.id
                        ? "bg-slate-800/70 text-white"
                        : "text-slate-300 hover:text-white hover:bg-slate-800/50"
                    ]}
                    data-expanded={currentCookbookCategory === category.id ? "true" : "false"}
                  >
                    <span class="flex items-center gap-2">
                      <span>{category.icon}</span>
                      {category.title}
                    </span>
                    <svg
                      class:list={[
                        "w-4 h-4 transition-transform cookbook-chevron",
                        currentCookbookCategory === category.id ? "rotate-180" : ""
                      ]}
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  
                  {/* Subcategory items */}
                  <ul
                    class:list={[
                      "cookbook-items ml-4 mt-1 space-y-1 border-l border-slate-700/50 pl-3 overflow-hidden transition-all",
                      currentCookbookCategory === category.id ? "" : "hidden"
                    ]}
                  >
                    {/* Hub page link */}
                    {category.hub && (
                      <li>
                        <a
                          href={`/docs/${category.hub.slug}`}
                          class:list={[
                            "block px-2 py-1.5 rounded text-sm transition-colors",
                            currentSlug === category.hub.slug
                              ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium"
                              : "text-slate-400 hover:text-white hover:bg-slate-800/50"
                          ]}
                        >
                          Overview
                        </a>
                      </li>
                    )}
                    {/* Individual recipes */}
                    {category.items.map(doc => (
                      <li>
                        <a
                          href={`/docs/${doc.slug}`}
                          class:list={[
                            "block px-2 py-1.5 rounded text-sm transition-colors",
                            currentSlug === doc.slug
                              ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium"
                              : "text-slate-400 hover:text-white hover:bg-slate-800/50"
                          ]}
                        >
                          {doc.data.title.replace(/^Cookbook:\s*/, '').replace(/^Recipe:\s*/, '')}
                        </a>
                      </li>
                    ))}
                  </ul>
                </li>
              ))}
            </ul>
          </div>
        </nav>
      </aside>
      
      <!-- Mobile sidebar toggle -->
      <button 
        id="docs-menu-toggle"
        class="lg:hidden fixed bottom-6 left-6 z-50 p-3 bg-rapeseed-500 text-slate-900 rounded-full shadow-lg hover:bg-rapeseed-400 transition-colors"
        aria-label="Toggle navigation"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Mobile sidebar overlay -->
      <div id="docs-mobile-sidebar" class="lg:hidden fixed inset-0 z-40 hidden">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="docs-sidebar-backdrop"></div>
        <aside class="absolute left-0 top-0 bottom-0 w-72 bg-slate-900 border-r border-slate-800 overflow-y-auto">
          <div class="p-4 border-b border-slate-800 flex justify-between items-center">
            <span class="font-semibold text-white">Documentation</span>
            <button id="docs-menu-close" class="p-2 text-slate-400 hover:text-white">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <nav class="p-6 space-y-6">
            {/* Regular sections */}
            {navSections.map(section => (
              section.items.length > 0 && (
                <div>
                  <h3 class="flex items-center gap-2 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">
                    <span>{section.icon}</span>
                    {section.title}
                  </h3>
                  <ul class="space-y-1">
                    {section.items.map(doc => (
                      <li>
                        <a
                          href={`/docs/${doc.slug}`}
                          class:list={[
                            "block px-3 py-2 rounded-lg text-sm transition-colors",
                            currentSlug === doc.slug 
                              ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium" 
                              : "text-slate-300 hover:text-white hover:bg-slate-800/50"
                          ]}
                        >
                          {doc.data.icon && <span class="mr-2">{doc.data.icon}</span>}
                          {doc.data.title}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )
            ))}
            
            {/* Cookbook section with subcategories (mobile) */}
            <div>
              <h3 class="flex items-center gap-2 text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">
                <span>üç≥</span>
                Cookbook
              </h3>
              <ul class="space-y-1">
                {cookbookCategories.map(category => (
                  <li class="cookbook-category" data-category={category.id}>
                    <button
                      class:list={[
                        "w-full flex items-center justify-between px-3 py-2 rounded-lg text-sm transition-colors group cookbook-toggle",
                        currentCookbookCategory === category.id
                          ? "bg-slate-800/70 text-white"
                          : "text-slate-300 hover:text-white hover:bg-slate-800/50"
                      ]}
                      data-expanded={currentCookbookCategory === category.id ? "true" : "false"}
                    >
                      <span class="flex items-center gap-2">
                        <span>{category.icon}</span>
                        {category.title}
                      </span>
                      <svg
                        class:list={[
                          "w-4 h-4 transition-transform cookbook-chevron",
                          currentCookbookCategory === category.id ? "rotate-180" : ""
                        ]}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </button>
                    
                    <ul
                      class:list={[
                        "cookbook-items ml-4 mt-1 space-y-1 border-l border-slate-700/50 pl-3 overflow-hidden transition-all",
                        currentCookbookCategory === category.id ? "" : "hidden"
                      ]}
                    >
                      {category.hub && (
                        <li>
                          <a
                            href={`/docs/${category.hub.slug}`}
                            class:list={[
                              "block px-2 py-1.5 rounded text-sm transition-colors",
                              currentSlug === category.hub.slug
                                ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium"
                                : "text-slate-400 hover:text-white hover:bg-slate-800/50"
                            ]}
                          >
                            Overview
                          </a>
                        </li>
                      )}
                      {category.items.map(doc => (
                        <li>
                          <a
                            href={`/docs/${doc.slug}`}
                            class:list={[
                              "block px-2 py-1.5 rounded text-sm transition-colors",
                              currentSlug === doc.slug
                                ? "bg-rapeseed-500/20 text-rapeseed-400 font-medium"
                                : "text-slate-400 hover:text-white hover:bg-slate-800/50"
                            ]}
                          >
                            {doc.data.title.replace(/^Cookbook:\s*/, '').replace(/^Recipe:\s*/, '')}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </li>
                ))}
              </ul>
            </div>
          </nav>
        </aside>
      </div>
      
      <!-- Main content -->
      <main class="flex-1 lg:ml-72 min-h-screen">
        <div class="max-w-4xl mx-auto px-6 py-12">
          <slot />
        </div>
      </main>
    </div>
    
    <!-- Mermaid.js for diagram rendering -->
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
    
    <script>
      // Mobile sidebar functionality
      const toggle = document.getElementById('docs-menu-toggle');
      const sidebar = document.getElementById('docs-mobile-sidebar');
      const close = document.getElementById('docs-menu-close');
      const backdrop = document.getElementById('docs-sidebar-backdrop');
      
      function openSidebar() {
        sidebar?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
      
      function closeSidebar() {
        sidebar?.classList.add('hidden');
        document.body.style.overflow = '';
      }
      
      toggle?.addEventListener('click', openSidebar);
      close?.addEventListener('click', closeSidebar);
      backdrop?.addEventListener('click', closeSidebar);
      
      // Collapsible cookbook navigation
      document.querySelectorAll('.cookbook-toggle').forEach(button => {
        button.addEventListener('click', () => {
          const category = button.closest('.cookbook-category');
          const items = category?.querySelector('.cookbook-items');
          const chevron = button.querySelector('.cookbook-chevron');
          const isExpanded = button.getAttribute('data-expanded') === 'true';
          
          if (items) {
            if (isExpanded) {
              items.classList.add('hidden');
              button.setAttribute('data-expanded', 'false');
              chevron?.classList.remove('rotate-180');
            } else {
              items.classList.remove('hidden');
              button.setAttribute('data-expanded', 'true');
              chevron?.classList.add('rotate-180');
            }
          }
        });
      });
      
      // Initialize Mermaid diagrams
      document.addEventListener('DOMContentLoaded', async () => {
        if (typeof mermaid !== 'undefined') {
          // Initialize mermaid with config (don't auto-start)
          mermaid.initialize({
            startOnLoad: false,
            theme: 'dark',
            themeVariables: {
              primaryColor: '#1e293b',
              primaryBorderColor: '#f5c542',
              primaryTextColor: '#f1f5f9',
              secondaryColor: '#0f172a',
              secondaryBorderColor: '#334155',
              secondaryTextColor: '#94a3b8',
              tertiaryColor: '#1e293b',
              tertiaryBorderColor: '#475569',
              tertiaryTextColor: '#f1f5f9',
              lineColor: '#64748b',
              textColor: '#f1f5f9',
              mainBkg: '#1e293b',
              nodeBorder: '#f5c542',
              clusterBkg: '#0f172a',
              clusterBorder: '#334155',
              edgeLabelBackground: '#1e293b',
              nodeTextColor: '#f1f5f9',
              actorBorder: '#f5c542',
              actorBkg: '#1e293b',
              actorTextColor: '#f1f5f9',
              actorLineColor: '#64748b',
              signalColor: '#64748b',
              signalTextColor: '#f1f5f9',
              labelTextColor: '#f1f5f9',
              loopTextColor: '#f1f5f9',
              activationBorderColor: '#f5c542',
              activationBkgColor: '#334155',
              noteBorderColor: '#f5c542',
              noteBkgColor: '#1e293b',
              noteTextColor: '#f1f5f9',
            },
            flowchart: {
              curve: 'basis',
              padding: 20,
              nodeSpacing: 50,
              rankSpacing: 50,
              htmlLabels: true,
            },
            sequence: {
              diagramMarginX: 10,
              diagramMarginY: 10,
              actorMargin: 50,
              boxMargin: 10,
              boxTextMargin: 5,
              noteMargin: 10,
              messageMargin: 35,
              mirrorActors: false,
              useMaxWidth: true,
            },
          });
          
          // Find all mermaid code blocks (rendered by Shiki as <pre><code class="language-mermaid">)
          const codeBlocks = document.querySelectorAll('pre code.language-mermaid, pre code[class*="language-mermaid"]');
          
          for (let i = 0; i < codeBlocks.length; i++) {
            const codeEl = codeBlocks[i];
            const preEl = codeEl.parentElement;
            const diagramCode = codeEl.textContent || '';
            
            // Create a container div for the rendered diagram
            const container = document.createElement('div');
            container.className = 'mermaid-diagram';
            
            try {
              // Render the diagram
              const { svg } = await mermaid.render(`mermaid-${i}`, diagramCode);
              container.innerHTML = svg;
              
              // Replace the pre element with the rendered diagram
              preEl.parentNode.replaceChild(container, preEl);
            } catch (e) {
              console.error('Mermaid render error:', e);
              // Show error message in the container
              container.innerHTML = `<div class="mermaid-error">Diagram rendering error: ${e.message}</div>`;
              preEl.parentNode.replaceChild(container, preEl);
            }
          }
        }
      });
    </script>
  </body>
</html>

