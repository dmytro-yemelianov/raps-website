  .mermaid marker path,
  .mermaid-diagram .arrowheadPath,
  .mermaid-diagram marker path {
    fill: #64748b !important;
    stroke: #64748b !important;
  }
  
  .mermaid .cluster rect,
  .mermaid-diagram .cluster rect {
    fill: #0f172a !important;
    stroke: #334155 !important;
    rx: 8px !important;
  }
  
  .mermaid .cluster-label .nodeLabel,
  .mermaid .cluster span,
  .mermaid-diagram .cluster-label .nodeLabel,
  .mermaid-diagram .cluster span {
    color: #94a3b8 !important;
    fill: #94a3b8 !important;
  }
  
  .mermaid .actor,
  .mermaid-diagram .actor {
    fill: #1e293b !important;
    stroke: #f5c542 !important;
  }
  
  .mermaid text.actor,
  .mermaid-diagram text.actor {
    fill: #f1f5f9 !important;
  }
  
  .mermaid .messageLine0,
  .mermaid .messageLine1,
  .mermaid-diagram .messageLine0,
  .mermaid-diagram .messageLine1 {
