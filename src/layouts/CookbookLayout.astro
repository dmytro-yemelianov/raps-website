    <script define:vars={{ navSubsections }}>
      // Mobile sidebar
      const toggle = document.getElementById('cookbook-menu-toggle');
      const sidebar = document.getElementById('cookbook-mobile-sidebar');
      const close = document.getElementById('cookbook-menu-close');
      const backdrop = document.getElementById('cookbook-sidebar-backdrop');

      toggle?.addEventListener('click', () => {
        sidebar?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });

      [close, backdrop].forEach(el => {
        el?.addEventListener('click', () => {
          sidebar?.classList.add('hidden');
          document.body.style.overflow = '';
        });
      });

      // Collapsible navigation
      document.querySelectorAll('.nav-toggle').forEach(button => {
        button.addEventListener('click', () => {
          const section = button.closest('.nav-section');
          const items = section?.querySelector('.nav-items');
          const chevron = button.querySelector('.nav-chevron');
          const isExpanded = button.getAttribute('data-expanded') === 'true';

          if (items) {
            items.classList.toggle('hidden', isExpanded);
            button.setAttribute('data-expanded', isExpanded ? 'false' : 'true');
            chevron?.classList.toggle('rotate-180', !isExpanded);
          }
        });
      });

      // Scroll current nav item into view
      document.addEventListener('DOMContentLoaded', () => {
        const currentLink = document.querySelector('#cookbook-nav a[data-current="true"]');
        if (currentLink) {
          currentLink.scrollIntoView({ block: 'center', behavior: 'instant' });
        }
      });

      // Add copy buttons to code blocks
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.docs-content pre').forEach(pre => {
          if (pre.getAttribute('data-language') === 'mermaid') return;

          const wrapper = document.createElement('div');
          wrapper.className = 'code-block-wrapper';
          pre.parentNode.insertBefore(wrapper, pre);
          wrapper.appendChild(pre);

          const lang = pre.getAttribute('data-language') || '';

          const header = document.createElement('div');
          header.className = 'code-block-header';

          if (lang) {
            const langLabel = document.createElement('span');
            langLabel.className = 'code-lang';
            langLabel.textContent = lang;
            header.appendChild(langLabel);
          } else {
            header.appendChild(document.createElement('span'));
          }

          const copyBtn = document.createElement('button');
          copyBtn.className = 'copy-btn';
          copyBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>`;
          copyBtn.title = 'Copy code';

          copyBtn.addEventListener('click', async () => {
            const code = pre.querySelector('code')?.textContent || pre.textContent || '';
            await navigator.clipboard.writeText(code);
            copyBtn.innerHTML = `<svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>`;
            setTimeout(() => {
              copyBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>`;
            }, 2000);
          });

          header.appendChild(copyBtn);
          wrapper.insertBefore(header, pre);
        });
      });

      // Mermaid diagrams
      document.addEventListener('DOMContentLoaded', async () => {
        if (typeof mermaid !== 'undefined') {
          mermaid.initialize({
            startOnLoad: false,
            theme: 'dark',
            themeVariables: {
              primaryColor: '#1e293b',
              primaryBorderColor: '#f5c542',
              primaryTextColor: '#f1f5f9',
              secondaryColor: '#0f172a',
              secondaryBorderColor: '#334155',
              secondaryTextColor: '#94a3b8',
              tertiaryColor: '#1e293b',
              lineColor: '#64748b',
              textColor: '#f1f5f9',
              mainBkg: '#1e293b',
              nodeBorder: '#f5c542',
              clusterBkg: '#0f172a',
              clusterBorder: '#334155',
              nodeTextColor: '#f1f5f9',
            },
            flowchart: { curve: 'basis', padding: 20 },
            sequence: { actorMargin: 50, useMaxWidth: true },
          });

          const mermaidBlocks = document.querySelectorAll('pre[data-language="mermaid"]');

          for (let i = 0; i < mermaidBlocks.length; i++) {
            const preEl = mermaidBlocks[i];
            const codeEl = preEl.querySelector('code');
            const diagramCode = codeEl ? codeEl.textContent : preEl.textContent || '';

            const container = document.createElement('div');
            container.className = 'mermaid-diagram';

            try {
              const { svg } = await mermaid.render(`mermaid-${i}`, diagramCode);
              container.innerHTML = svg;
              preEl.parentNode.replaceChild(container, preEl);
            } catch (e) {
              console.error('Mermaid error:', e);
              container.innerHTML = `<div class="text-red-400 text-sm p-4">Diagram error: ${e.message}</div>`;
              preEl.parentNode.replaceChild(container, preEl);
            }
          }
        }
      });

      // Cookbook Search
      let cookbookIndex = [];

      function buildSearchIndex() {
        navSubsections.forEach(sub => {
          sub.items.forEach(item => {
            cookbookIndex.push({
              title: item.data.title,
              slug: item.slug,
              description: item.data.description || '',
              section: sub.title,
              url: `/cookbook/${item.slug}`
            });
          });
        });
      }

      function searchCookbook(query) {
        if (!query || query.length < 2) return [];
        return cookbookIndex.filter(item => {
          const searchText = `${item.title} ${item.description} ${item.section}`.toLowerCase();
          return searchText.includes(query.toLowerCase());
        }).slice(0, 8);
      }

      function renderSearchResults(results, containerId) {
        const container = document.getElementById(containerId);
        if (results.length === 0) {
          container.innerHTML = '<div class="p-3 text-sm text-slate-400">No results found</div>';
          return;
        }
        const inputId = containerId.includes('mobile') ? 'cookbook-search-mobile' : 'cookbook-search';
        const query = document.getElementById(inputId).value;
        container.innerHTML = results.map(result => `
          <a href="${result.url}" class="block p-3 hover:bg-slate-700 transition-colors border-b border-slate-600 last:border-b-0">
            <div class="font-medium text-white text-sm">${highlightMatch(result.title, query)}</div>
            <div class="text-xs text-slate-400 mt-1">${result.section}</div>
            ${result.description ? `<div class="text-xs text-slate-500 mt-1 line-clamp-2">${highlightMatch(result.description, query)}</div>` : ''}
          </a>
        `).join('');
      }

      function highlightMatch(text, query) {
        if (!query) return text;
        const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\\]\\\\]/g, '\\\\$&')})`, 'gi');
        return text.replace(regex, '<mark class="bg-rapeseed-400/30 text-rapeseed-300">$1</mark>');
      }

      function setupSearch() {
        buildSearchIndex();
        const searchInputs = ['cookbook-search', 'cookbook-search-mobile'];
        const resultContainers = ['search-results', 'search-results-mobile'];

        searchInputs.forEach((inputId, index) => {
          const input = document.getElementById(inputId);
          const resultsContainer = document.getElementById(resultContainers[index]);
          if (!input || !resultsContainer) return;

          let searchTimeout;
          input.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const query = this.value.trim();
            if (query.length === 0) { resultsContainer.classList.add('hidden'); return; }
            if (query.length < 2) {
              resultsContainer.classList.remove('hidden');
              resultsContainer.innerHTML = '<div class="p-3 text-sm text-slate-400">Type at least 2 characters...</div>';
              return;
            }
            searchTimeout = setTimeout(() => {
              const results = searchCookbook(query);
              renderSearchResults(results, resultContainers[index]);
              resultsContainer.classList.remove('hidden');
            }, 200);
          });

          input.addEventListener('focus', function() {
            if (this.value.trim().length >= 2) resultsContainer.classList.remove('hidden');
          });

          document.addEventListener('click', function(e) {
            if (!input.contains(e.target) && !resultsContainer.contains(e.target)) {
              resultsContainer.classList.add('hidden');
            }
          });

          input.addEventListener('keydown', function(e) {
            const links = resultsContainer.querySelectorAll('a');
            if (links.length === 0) return;
            let activeIndex = -1;
            links.forEach((link, i) => {
              if (link.classList.contains('bg-slate-600')) { activeIndex = i; link.classList.remove('bg-slate-600'); }
            });
            if (e.key === 'ArrowDown') { e.preventDefault(); activeIndex = Math.min(activeIndex + 1, links.length - 1); }
            else if (e.key === 'ArrowUp') { e.preventDefault(); activeIndex = Math.max(activeIndex - 1, 0); }
            else if (e.key === 'Enter') { e.preventDefault(); if (activeIndex >= 0) links[activeIndex].click(); }
            if (activeIndex >= 0) links[activeIndex].classList.add('bg-slate-600');
          });
        });
      }

      document.addEventListener('DOMContentLoaded', setupSearch);
    </script>

    <!-- Mermaid.js (pinned to 10.9.3 for stability) -->
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10.9.3/dist/mermaid.min.js"></script>

