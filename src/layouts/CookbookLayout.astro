import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GlossaryText from '../components/GlossaryText.astro';
import GlobalSearch from '../components/GlobalSearch.astro';
import Analytics from '@vercel/analytics/astro';
import { getCollection } from 'astro:content';
import '../styles/globals.css';
import '../styles/accessibility.css';

interface Props {
  title: string;
  description?: string;
  currentSlug?: string;
}

const {
  title,
  description = 'RAPS Cookbook â€” Industry Recipes',
  currentSlug = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Get all cookbook entries
const allCookbook = await getCollection('cookbook');

// Helper to get slug from doc
const getDocSlug = (doc: any) => {
  const raw = doc.slug || doc.id || '';
  return raw.replace(/\.mdx?$/, '');
};

// Determine which subsection the current page belongs to
const getCurrentSubsection = () => {
  if (currentSlug.startsWith('cookbook-aec')) return 'aec';
  if (currentSlug.startsWith('cookbook-acc') || currentSlug === 'cookbook-construction') return 'construction';
  if (currentSlug.startsWith('cookbook-mfg') || currentSlug === 'cookbook-manufacturing') return 'manufacturing';
  if (currentSlug.startsWith('cookbook-media')) return 'media';
  return null;
};

const currentSubsection = getCurrentSubsection();

// Navigation structure â€” 4 industry subsections
const navSubsections = [
  {
    id: 'aec',
    title: 'AEC & BIM',
    icon: 'ðŸ—ï¸',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-aec'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-aec-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'construction',
    title: 'Construction',
    icon: 'ðŸš§',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-construction'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-acc-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'manufacturing',
    title: 'Manufacturing',
    icon: 'âš™ï¸',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-manufacturing'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-mfg-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'media',
    title: 'Media & Assets',
    icon: 'ðŸŽ¬',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-media'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-media-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
];

// Add slug property for template use
navSubsections.forEach(sub => {
  sub.items = sub.items.map(doc => ({
    ...doc,
    slug: getDocSlug(doc)
  }));
});

const cleanTitle = (title: string) => {
  return title
    .replace(/^Cookbook:\s*/i, '')
    .replace(/^Recipe:\s*/i, '');
};
