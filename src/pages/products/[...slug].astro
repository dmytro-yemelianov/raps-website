---
import ProductLayout from '../../layouts/ProductLayout.astro';
import { getCollection, render } from 'astro:content';
import { stripLocalePrefix, getLangFromUrl, localizeEntry } from '../../i18n/utils';

export async function getStaticPaths() {
  const products = (await getCollection('products')).filter(d => d.id.startsWith('en/'));
  return products.map(product => {
    const slug = stripLocalePrefix((product.id || product.slug || '').replace(/\.mdx?$/, ''));
    return {
      params: { slug },
      props: { product },
    };
  });
}

const { product: enProduct } = Astro.props;
const lang = getLangFromUrl(Astro.url, Astro.currentLocale);
const allProducts = await getCollection('products');
const product = localizeEntry(enProduct, allProducts, lang);
const { Content } = await render(product);
const slug = stripLocalePrefix((product.id || product.slug || '').replace(/\.mdx?$/, ''));
---

<ProductLayout
  title={product.data.title}
  description={product.data.description}
  tagline={product.data.tagline}
  icon={product.data.icon}
  github={product.data.github}
  version={product.data.version}
  currentSlug={slug}
>
  <Content />
</ProductLayout>
