---
import ProductLayout from '../../layouts/ProductLayout.astro';
import { getCollection, render } from 'astro:content';

// Helper to get slug from entry (Astro 5 uses id, Astro 4 uses slug)
const getSlug = (entry: any) => {
  const raw = entry.slug || entry.id || '';
  return raw.replace(/\.mdx?$/, '');
};

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(product => ({
    params: { slug: getSlug(product) },
    props: { product },
  }));
}

const { product } = Astro.props;
const { Content } = await render(product);
const slug = getSlug(product);
---

<ProductLayout
  title={product.data.title}
  description={product.data.description}
  tagline={product.data.tagline}
  icon={product.data.icon}
  github={product.data.github}
  version={product.data.version}
  currentSlug={slug}
>
  <Content />
</ProductLayout>
