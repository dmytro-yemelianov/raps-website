---
import { getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { stripLocalePrefix, getLangFromUrl, localizeEntry } from '../../i18n/utils';

export async function getStaticPaths() {
  const posts = (await getCollection('blog')).filter(d => d.id.startsWith('en/'));
  return posts.map((post) => ({
    params: { slug: stripLocalePrefix(post.id.replace(/\.mdx?$/, '')) },
    props: { post },
  }));
}

const { post: enPost } = Astro.props;
const lang = getLangFromUrl(Astro.url, Astro.currentLocale);
const allPosts = await getCollection('blog');
const post = localizeEntry(enPost, allPosts, lang);
const { Content } = await render(post);
---

<BlogPost frontmatter={post.data}>
  <Content />
</BlogPost>
