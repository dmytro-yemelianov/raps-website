---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    icon: 'üìä',
    title: 'Usage Analytics',
    description: 'Track command usage, API latency, and error rates for enterprise visibility.',
    gradient: 'from-violet-500/20 to-purple-500/20',
  },
  {
    icon: 'üìã',
    title: 'Audit Logging',
    description: 'Immutable audit trail for compliance and security. Export in JSON, CSV, or PDF.',
    gradient: 'from-indigo-500/20 to-blue-500/20',
  },
  {
    icon: '‚úÖ',
    title: 'Compliance Reporting',
    description: 'Generate SOC2, GDPR, HIPAA compliance reports with automated findings.',
    gradient: 'from-emerald-500/20 to-teal-500/20',
  },
  {
    icon: 'üè¢',
    title: 'Multi-tenant Management',
    description: 'Manage multiple organizations and projects at scale with tenant isolation.',
    gradient: 'from-orange-500/20 to-amber-500/20',
  },
  {
    icon: 'üîê',
    title: 'SSO/SAML Integration',
    description: 'Enterprise single sign-on support with SAML 2.0, OpenID Connect, Azure AD, Okta.',
    gradient: 'from-rose-500/20 to-pink-500/20',
  },
  {
    icon: 'üé´',
    title: 'License Management',
    description: 'Centralized license enforcement, seat management, and feature gating.',
    gradient: 'from-cyan-500/20 to-blue-500/20',
  },
];

const benefits = [
  {
    title: 'Enterprise Support',
    description: 'Priority support, SLA guarantees, and dedicated account management.',
    icon: 'üéØ',
  },
  {
    title: 'Advanced Security',
    description: 'Audit logs, compliance reporting, and enterprise-grade security features.',
    icon: 'üõ°Ô∏è',
  },
  {
    title: 'Scalability',
    description: 'Multi-tenant architecture designed for large organizations.',
    icon: 'üìà',
  },
  {
    title: 'Custom Integrations',
    description: 'SSO/SAML support and custom integration assistance.',
    icon: 'üîß',
  },
];

const comparison = [
  { feature: 'Core Tier Features', core: true, community: true, pro: true },
  { feature: 'Community Tier Features', core: false, community: true, pro: true },
  { feature: 'Usage Analytics', core: false, community: false, pro: true },
  { feature: 'Audit Logging', core: false, community: false, pro: true },
  { feature: 'Compliance Reports', core: false, community: false, pro: true },
  { feature: 'Multi-tenant Management', core: false, community: false, pro: true },
  { feature: 'SSO/SAML Integration', core: false, community: false, pro: true },
  { feature: 'Enterprise Support', core: false, community: false, pro: true },
];
---

<BaseLayout title="Pro Tier - RAPS">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-violet-950/30 via-purple-950/20 to-slate-950 pointer-events-none"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[800px] bg-gradient-radial from-violet-500/5 via-purple-500/10 to-transparent rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 pt-20 pb-16 sm:pt-32 sm:pb-24">
      <div class="text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-1.5 bg-violet-500/10 border border-violet-500/30 rounded-full text-sm text-violet-300 mb-8 backdrop-blur-sm">
          <span class="w-2 h-2 bg-violet-400 rounded-full animate-pulse"></span>
          Pro Tier ‚Äî Enterprise Features
        </div>
        
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-display font-black text-white mb-6 tracking-tight leading-[1.1]">
          <span class="bg-gradient-to-r from-violet-400 via-purple-400 to-violet-400 bg-clip-text text-transparent bg-[length:200%_auto] animate-gradient">
            Pro Tier
          </span>
        </h1>
        
        <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
          Enterprise-grade features for large organizations.<br />
          <strong class="text-white">Analytics</strong>, <strong class="text-white">Audit</strong>, <strong class="text-white">Compliance</strong>, and <strong class="text-white">SSO</strong>.
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
          <a
            href="mailto:sales@rapscli.xyz?subject=Pro Tier Inquiry"
            class="w-full sm:w-auto px-8 py-3 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-500 hover:to-purple-500 text-white font-semibold rounded-lg transition-all shadow-lg shadow-violet-900/30 hover:shadow-violet-900/50 hover:scale-105 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Sales
          </a>
          <a
            href="/docs"
            class="w-full sm:w-auto px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-all border border-slate-700 hover:border-slate-600 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            View Documentation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-4">
          Enterprise Features
        </h2>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
          Everything from Core and Community tiers, plus enterprise-grade capabilities.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class={`p-6 bg-gradient-to-br ${feature.gradient} border border-slate-800/50 rounded-xl hover:border-slate-700 transition-all group hover:scale-[1.02] hover:shadow-xl`}>
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform">{feature.icon}</div>
            <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-violet-400 transition-colors font-display">
              {feature.title}
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 sm:py-28 bg-slate-900/50 border-y border-slate-800/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-4">
          Why Choose Pro Tier?
        </h2>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {benefits.map((benefit) => (
          <div class="flex gap-4 p-6 bg-slate-900/60 border border-slate-800 rounded-xl hover:border-violet-500/50 transition-all">
            <div class="flex-shrink-0 text-4xl">{benefit.icon}</div>
            <div>
              <h3 class="font-semibold text-white mb-2 font-display text-lg">{benefit.title}</h3>
              <p class="text-slate-400 leading-relaxed">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Comparison Table -->
  <section class="py-20 sm:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-4">
          Tier Comparison
        </h2>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
          See what's included in each tier.
        </p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="w-full bg-slate-900/60 border border-slate-800 rounded-xl overflow-hidden">
          <thead>
            <tr class="border-b border-slate-800">
              <th class="px-6 py-4 text-left text-sm font-semibold text-white">Feature</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-slate-400">Core</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-emerald-400">Community</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-violet-400">Pro</th>
            </tr>
          </thead>
          <tbody>
            {comparison.map((row, index) => (
              <tr class={index % 2 === 0 ? 'bg-slate-900/40' : ''}>
                <td class="px-6 py-4 text-sm text-slate-300">{row.feature}</td>
                <td class="px-6 py-4 text-center">
                  {row.core ? (
                    <svg class="w-5 h-5 text-green-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <span class="text-slate-600">‚Äî</span>
                  )}
                </td>
                <td class="px-6 py-4 text-center">
                  {row.community ? (
                    <svg class="w-5 h-5 text-emerald-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <span class="text-slate-600">‚Äî</span>
                  )}
                </td>
                <td class="px-6 py-4 text-center">
                  {row.pro ? (
                    <svg class="w-5 h-5 text-violet-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <span class="text-slate-600">‚Äî</span>
                  )}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 sm:py-28 bg-gradient-to-b from-violet-950/30 via-purple-950/10 to-slate-950 border-t border-slate-800/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-6">
        Ready for Enterprise?
      </h2>
      <p class="text-lg text-slate-400 mb-10 max-w-2xl mx-auto">
        Contact our sales team to discuss Pro tier licensing, custom integrations, and enterprise support options.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="mailto:sales@rapscli.xyz?subject=Pro Tier Inquiry"
          class="w-full sm:w-auto px-8 py-3 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-500 hover:to-purple-500 text-white font-semibold rounded-lg transition-all shadow-lg shadow-violet-900/30 hover:shadow-violet-900/50 hover:scale-105 flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Sales
        </a>
        <a
          href="/community"
          class="w-full sm:w-auto px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-colors border border-slate-700 flex items-center justify-center gap-2"
        >
          View Community Tier
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .animate-gradient {
    animation: gradient 6s ease infinite;
  }
</style>
