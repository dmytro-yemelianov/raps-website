---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalDemo from '../components/TerminalDemo.astro';
import DownloadButton from '../components/DownloadButton.astro';
import GitHubStars from '../components/GitHubStars.astro';
import UserOnboarding from '../components/UserOnboarding.astro';
import { getLatestRelease } from '../data/releases.js';

const latestRelease = getLatestRelease();

const docsCards = [
  {
    icon: 'üìñ',
    title: 'Introduction',
    description: 'Learn what RAPS is and what it can do',
    href: '/docs/introduction',
    gradient: 'from-rapeseed-500/10 via-rapeseed-500/5 to-transparent',
    border: 'group-hover:border-rapeseed-500/50',
  },
  {
    icon: 'üì•',
    title: 'Installation',
    description: 'Get RAPS installed on your system',
    href: '/docs/installation',
    gradient: 'from-blue-500/10 via-cyan-500/5 to-transparent',
    border: 'group-hover:border-blue-500/50',
  },
  {
    icon: '‚öôÔ∏è',
    title: 'Configuration',
    description: 'Set up your APS credentials',
    href: '/docs/configuration',
    gradient: 'from-emerald-500/10 via-teal-500/5 to-transparent',
    border: 'group-hover:border-emerald-500/50',
  },
  {
    icon: 'üéØ',
    title: 'Usage Modes',
    description: 'CLI, Shell, Actions, Docker, MCP',
    href: '/docs/usage-modes',
    gradient: 'from-violet-500/10 via-purple-500/5 to-transparent',
    border: 'group-hover:border-violet-500/50',
  },
  {
    icon: 'üß≠',
    title: 'Troubleshooting',
    description: 'Fix common setup and runtime errors',
    href: '/docs/troubleshooting',
    gradient: 'from-orange-500/10 via-amber-500/5 to-transparent',
    border: 'group-hover:border-orange-500/50',
  },
];

const stats = [
  { value: '15+', label: 'APS APIs' },
  { value: '100+', label: 'Commands' },
  { value: '5', label: 'Usage Modes' },
  { value: '0ms', label: 'Runtime Deps' },
];

const quickStart = [
  {
    step: '01',
    title: 'Install',
    description: 'Single binary via Cargo, Homebrew, Scoop, or Docker.',
    command: 'cargo install raps',
    href: '/docs/installation',
  },
  {
    step: '02',
    title: 'Configure',
    description: 'Set up credentials via env vars or config profiles.',
    command: 'raps config set client_id "..."',
    href: '/docs/configuration',
  },
  {
    step: '03',
    title: 'Verify',
    description: 'Test your connection to Autodesk Platform Services.',
    command: 'raps auth test',
    href: '/docs/auth',
  },
];
---

<BaseLayout title="Modern CI/CD for Autodesk Platform Services">
  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 sm:pt-32 sm:pb-28 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary-900/20 via-slate-950 to-slate-950 pointer-events-none"></div>
    <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 z-10">
      <div class="flex flex-col items-center text-center">
        
        <!-- Announcement Banner -->
        <a href={`https://github.com/dmytro-yemelianov/raps/releases/tag/v${latestRelease.version}`} target="_blank" class="group inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-900/80 border border-slate-800 text-sm text-slate-300 hover:border-rapeseed-500/30 hover:text-white transition-all mb-10 backdrop-blur-md">
          <span class="flex h-2 w-2 relative">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-rapeseed-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-rapeseed-500"></span>
          </span>
          <span class="font-medium">v{latestRelease.version} Released</span>
          <span class="text-slate-600 group-hover:text-slate-400">|</span>
          <span>{latestRelease.highlights.slice(0, 2).join(' + ')}</span>
          <svg class="w-4 h-4 text-slate-500 group-hover:text-rapeseed-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-7xl lg:text-8xl font-display font-black tracking-tight text-white mb-8 relative">
          <span class="block text-transparent bg-clip-text bg-gradient-to-br from-white via-slate-200 to-slate-500 pb-2">
            Automate APS
          </span>
          <span class="relative block text-4xl sm:text-6xl lg:text-7xl mt-2 text-slate-400">
            without the <span class="bg-gradient-to-r from-rapeseed-400 to-amber-400 bg-clip-text text-transparent">boilerplate</span>.
          </span>
        </h1>

        <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto mb-8 leading-relaxed">
          The comprehensive CLI for Autodesk Platform Services. <br class="hidden sm:block" />
          Designed for high-performance CI/CD pipelines and AI agents.
        </p>

        <!-- GitHub Stars Counter -->
        <div class="flex items-center justify-center mb-8">
          <GitHubStars />
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center gap-4 w-full sm:w-auto">
          <DownloadButton size="lg" />
          <div class="flex items-center gap-4">
            <a href="/docs/introduction" class="px-8 py-3.5 rounded-lg font-semibold text-slate-300 hover:text-white border border-slate-800 hover:border-slate-600 bg-slate-900/50 hover:bg-slate-800 transition-all flex items-center gap-2">
              Documentation
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
            </a>
            <a href="https://github.com/dmytro-yemelianov/raps" target="_blank" rel="noopener" class="p-3.5 rounded-lg text-slate-400 hover:text-white border border-slate-800 hover:border-slate-600 bg-slate-900/50 hover:bg-slate-800 transition-all" aria-label="GitHub">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" /></svg>
            </a>
          </div>
        </div>

        <!-- Terminal Preview -->
        <div class="mt-20 w-full max-w-4xl perspective-1000">
          <div class="relative transform rotate-x-2 group">
            <div class="absolute -inset-1 bg-gradient-to-r from-rapeseed-500 to-blue-600 rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
            <TerminalDemo />
          </div>
        </div>

        <!-- Stats -->
        <div class="mt-20 pt-10 border-t border-slate-800/50 w-full max-w-4xl grid grid-cols-2 md:grid-cols-4 gap-8">
          {stats.map((stat) => (
            <div class="flex flex-col items-center">
              <dt class="text-sm text-slate-500 font-medium uppercase tracking-wider">{stat.label}</dt>
              <dd class="text-3xl font-display font-bold text-white mt-2">{stat.value}</dd>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Docs Navigation Grid -->
  <section class="py-24 bg-slate-950 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 relative z-10">
      <div class="mb-16 md:text-center max-w-3xl mx-auto">
        <h2 class="text-3xl sm:text-5xl font-display font-black text-white mb-6">RAPS Documentation</h2>
        <p class="text-slate-400 text-lg">Everything you need to know about using RAPS CLI for Autodesk Platform Services.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {docsCards.map((card) => (
          <a href={card.href} class="relative group rounded-3xl p-8 bg-slate-900/50 border border-slate-800/50 overflow-hidden hover:bg-slate-900 transition-colors block h-full">
            <div class={`absolute inset-0 bg-gradient-to-br ${card.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
            <div class={`absolute inset-0 border-2 border-transparent ${card.border} rounded-3xl transition-colors duration-500 pointer-events-none`}></div>
            
            <div class="relative z-10 h-full flex flex-col items-center text-center">
              <div class="text-5xl mb-6 transform group-hover:scale-110 transition-transform duration-300 emoji">{card.icon}</div>
              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-rapeseed-400 transition-colors">{card.title}</h3>
              <p class="text-slate-400 leading-relaxed max-w-xs mx-auto">{card.description}</p>
              
              <div class="mt-6 flex items-center text-sm font-semibold text-slate-500 group-hover:text-white transition-colors">
                Read Guide
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Start -->
  <section class="py-24 bg-slate-900/30 border-y border-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-8">Ready in seconds.</h2>
          <div class="space-y-8">
            {quickStart.map((step) => (
              <div class="flex gap-6 group">
                <div class="flex-shrink-0 w-12 h-12 rounded-full border border-slate-700 bg-slate-800 flex items-center justify-center font-mono font-bold text-rapeseed-400 group-hover:border-rapeseed-500/50 group-hover:bg-rapeseed-500/10 transition-colors">
                  {step.step}
                </div>
                <div>
                  <h3 class="text-xl font-bold text-white mb-2 group-hover:text-rapeseed-400 transition-colors">{step.title}</h3>
                  <p class="text-slate-400 mb-3">{step.description}</p>
                  <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-black/50 border border-slate-800 font-mono text-sm text-slate-300">
                    <span class="text-rapeseed-500">$</span> {step.command}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Code Window -->
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-rapeseed-500 to-indigo-500 rounded-2xl opacity-20 blur-xl"></div>
          <div class="relative rounded-xl overflow-hidden bg-[#1E1E1E] shadow-2xl border border-slate-700/50">
            <!-- Window Title Bar -->
            <div class="flex items-center justify-between px-4 py-3 bg-[#252526] border-b border-[#333]">
              <div class="flex gap-2">
                <div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
                <div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
                <div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
              </div>
              <div class="text-xs text-slate-400 font-sans">pipeline.yml ‚Äî raps</div>
              <div class="w-14"></div> <!-- Spacer to center title -->
            </div>
            
            <!-- Code Area -->
            <div class="p-6 overflow-x-auto">
              <pre class="font-mono text-sm leading-relaxed text-[#D4D4D4]"><code><span class="text-[#6A9955]"># .github/workflows/process-model.yml</span>
<span class="text-[#569CD6]">name:</span> Data Pipeline

<span class="text-[#569CD6]">on:</span>
  <span class="text-[#569CD6]">push:</span>
    <span class="text-[#569CD6]">paths:</span>
      - <span class="text-[#CE9178]">'models/*.rvt'</span>

<span class="text-[#569CD6]">jobs:</span>
  <span class="text-[#DCDCAA]">translate:</span>
    <span class="text-[#569CD6]">runs-on:</span> ubuntu-latest
    <span class="text-[#569CD6]">steps:</span>
      - <span class="text-[#569CD6]">uses:</span> actions/checkout@v4
      
      - <span class="text-[#569CD6]">name:</span> Process Revit Model
        <span class="text-[#569CD6]">run:</span> |
          <span class="text-[#6A9955]"># Authenticate and process</span>
          raps auth test
          raps object upload $BUCKET model.rvt
          raps translate start $URN --wait
          raps derivative manifest $URN > output.json</code></pre>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Community -->
  <section class="py-24 bg-slate-900/20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl sm:text-4xl font-display font-bold text-white mb-6">
        Growing <span class="text-transparent bg-clip-text bg-gradient-to-r from-rapeseed-400 to-amber-400">Community</span>
      </h2>
      <p class="text-slate-300 text-lg mb-12 max-w-2xl mx-auto">
        RAPS is actively developed and growing. Join the community to shape the future of APS automation.
      </p>
      
      <!-- Real Community Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mb-12">
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-2xl font-bold text-rapeseed-400 mb-2">Open Source</div>
          <div class="text-slate-400 text-sm">Apache 2.0 License</div>
        </div>
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-2xl font-bold text-rapeseed-400 mb-2">Active Development</div>
          <div class="text-slate-400 text-sm">Regular Updates</div>
        </div>
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-2xl font-bold text-rapeseed-400 mb-2">Cross-Platform</div>
          <div class="text-slate-400 text-sm">Windows, macOS, Linux</div>
        </div>
      </div>
      
      <!-- Community Actions -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a 
          href="https://github.com/dmytro-yemelianov/raps" 
          target="_blank"
          class="flex items-center gap-2 px-6 py-3 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
          </svg>
          Star on GitHub
        </a>
        <a 
          href="https://discord.gg/PXRabMhWTY" 
          target="_blank"
          class="flex items-center gap-2 px-6 py-3 border border-slate-700 hover:border-slate-600 text-slate-300 hover:text-white rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419-.0189 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1568 2.4189Z"/>
          </svg>
          Join Discord
        </a>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-t from-rapeseed-950/20 to-transparent"></div>
    <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
      <h2 class="text-4xl sm:text-5xl font-display font-black text-white mb-8">Open Source & Community Driven</h2>
      <p class="text-xl text-slate-400 mb-12">
        RAPS is free, open source, and built by developers for developers. Join us in making Autodesk Platform Services easier to use.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="https://github.com/dmytro-yemelianov/raps" target="_blank" class="px-8 py-4 rounded-full bg-white text-slate-900 font-bold hover:bg-slate-200 transition-colors flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" /></svg>
          Star on GitHub
        </a>
        <a href="https://discord.gg/PXRabMhWTY" target="_blank" class="px-8 py-4 rounded-full bg-slate-800 text-white font-bold hover:bg-slate-700 transition-colors border border-slate-700">
          Join the Community
        </a>
      </div>
    </div>
  </section>

  <!-- User Onboarding -->
  <UserOnboarding />
</BaseLayout>
