---
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalDemo from '../components/TerminalDemo.astro';
import DownloadButton from '../components/DownloadButton.astro';

const features = [
  {
    icon: 'ü§ñ',
    title: 'MCP Server',
    description: 'AI assistant integration for Claude, Cursor. Natural language APS operations.',
    gradient: 'from-rapeseed-500/20 to-amber-500/20',
  },
  {
    icon: 'üîê',
    title: 'Authentication',
    description: '2-legged, 3-legged OAuth, device-code, and token-based auth for any scenario.',
    gradient: 'from-blue-500/20 to-cyan-500/20',
  },
  {
    icon: 'üì¶',
    title: 'Object Storage',
    description: 'Upload, download, batch process with resumable multipart uploads.',
    gradient: 'from-emerald-500/20 to-teal-500/20',
  },
  {
    icon: 'üîÑ',
    title: 'Model Translation',
    description: 'Translate CAD files to SVF2, OBJ, STL, STEP with status polling.',
    gradient: 'from-violet-500/20 to-purple-500/20',
  },
  {
    icon: 'üèóÔ∏è',
    title: 'Data Management',
    description: 'Browse hubs, projects, folders. Full BIM 360/ACC integration.',
    gradient: 'from-orange-500/20 to-amber-500/20',
  },
  {
    icon: '‚öôÔ∏è',
    title: 'Design Automation',
    description: 'Manage engines, activities, and work items for batch processing.',
    gradient: 'from-rose-500/20 to-pink-500/20',
  },
];

const stats = [
  { value: '15+', label: 'APS APIs Covered' },
  { value: '100+', label: 'CLI Commands' },
  { value: '14', label: 'MCP Tools' },
  { value: '5', label: 'Platforms' },
];

const quickStart = [
  {
    title: 'Install the CLI',
    description: 'Single binary available via Cargo, Homebrew, Scoop, Docker, and GitHub Releases.',
    command: 'cargo install raps',
    href: '/docs/installation',
    link: 'All installation options',
  },
  {
    title: 'Configure credentials',
    description: 'Use environment variables, profiles, or .env files with standard APS secrets.',
    command: 'raps config set client_id "YOUR_CLIENT_ID"',
    href: '/docs/configuration',
    link: 'Configuration guide',
  },
  {
    title: 'Verify authentication',
    description: 'Confirm both 2-legged and 3-legged OAuth flows before running pipelines.',
    command: 'raps auth test',
    href: '/docs/auth',
    link: 'Authentication docs',
  },
];

const whyRaps = [
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" /></svg>`,
    color: 'text-rapeseed-400 bg-rapeseed-500/10',
    title: 'AI Assistant Ready',
    description: 'MCP server for Claude, Cursor, and other AI assistants. Natural language APS operations.',
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
    color: 'text-primary-400 bg-primary-500/10',
    title: 'Built for CI/CD',
    description: 'Standardized exit codes, JSON/YAML output, non-interactive mode. Designed from day one for automation pipelines.',
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    color: 'text-rust-500 bg-rust-500/10',
    title: 'Written in Rust',
    description: 'Fast, memory-safe, single binary. No runtime dependencies. Works on Windows, macOS, Linux.',
  },
  {
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" /></svg>`,
    color: 'text-green-400 bg-green-500/10',
    title: 'Comprehensive Coverage',
    description: '15+ APS APIs. OSS, Model Derivative, Data Management, Design Automation, ACC Issues, RFIs, and more.',
  },
];
---

<BaseLayout title="CI/CD for Autodesk Platform Services">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Animated background -->
    <div class="absolute inset-0 bg-gradient-to-b from-slate-950 via-primary-950/30 to-slate-950 pointer-events-none"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[800px] bg-gradient-radial from-rapeseed-500/5 via-primary-500/10 to-transparent rounded-full blur-3xl pointer-events-none"></div>
    
    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.02)_1px,transparent_1px)] bg-[size:72px_72px] pointer-events-none"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 pt-20 pb-16 sm:pt-32 sm:pb-24">
      <div class="text-center">
        <!-- Live Badges -->
        <div class="flex items-center justify-center gap-3 mb-6 flex-wrap">
          <a href="https://crates.io/crates/raps" target="_blank" rel="noopener noreferrer">
            <img src="https://img.shields.io/crates/v/raps.svg?style=flat-square&color=eab308" alt="Crates.io version" class="h-5" />
          </a>
          <a href="https://crates.io/crates/raps" target="_blank" rel="noopener noreferrer">
            <img src="https://img.shields.io/crates/d/raps.svg?style=flat-square&color=3b82f6" alt="Downloads" class="h-5" />
          </a>
          <a href="https://github.com/dmytro-yemelianov/raps" target="_blank" rel="noopener noreferrer">
            <img src="https://img.shields.io/github/stars/dmytro-yemelianov/raps?style=flat-square&color=eab308" alt="GitHub stars" class="h-5" />
          </a>
        </div>

        <!-- Badge -->
        <a
          href="https://github.com/dmytro-yemelianov/raps/releases"
          class="inline-flex items-center gap-2 px-4 py-1.5 bg-slate-800/50 border border-slate-700/50 rounded-full text-sm text-slate-300 hover:border-rapeseed-500/50 hover:bg-slate-800 transition-all mb-8 backdrop-blur-sm"
        >
          <span class="w-2 h-2 bg-rapeseed-400 rounded-full animate-pulse"></span>
          v3.1.0 Released ‚Äî Rust 2024 Edition + CI Speedups ‚Üí
        </a>
        
        <!-- Headline with rapeseed accent -->
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-display font-black text-white mb-6 tracking-tight leading-[1.1]">
          CI/CD for
          <span class="bg-gradient-to-r from-rapeseed-400 via-primary-400 to-rapeseed-400 bg-clip-text text-transparent bg-[length:200%_auto] animate-gradient">
            Autodesk Platform Services
          </span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-lg sm:text-xl text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
          Stop clicking buttons. Start writing pipelines.<br />
          <span class="text-rapeseed-400">üåº RAPS</span> (rapeseed ‚Äî <strong class="text-white">R</strong>ust <strong class="text-white">A</strong>utodesk <strong class="text-white">P</strong>latform <strong class="text-white">S</strong>ervices) brings modern DevOps to APS.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
          <DownloadButton size="lg" />
          <a
            href="/quickstart"
            class="w-full sm:w-auto px-8 py-3 bg-slate-800 hover:bg-slate-700 text-white font-semibold rounded-lg transition-all border border-slate-700 hover:border-slate-600 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Quick Start
          </a>
        </div>
        
        <!-- GitHub Action Buttons -->
        <div class="flex flex-wrap justify-center gap-3 mb-16">
          <a
            href="https://github.com/dmytro-yemelianov/raps"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800/50 hover:bg-slate-800 text-slate-300 hover:text-white text-sm font-medium rounded-lg border border-slate-700/50 hover:border-slate-600 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
            </svg>
            <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
            Star
          </a>
          <a
            href="https://github.com/dmytro-yemelianov/raps/fork"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800/50 hover:bg-slate-800 text-slate-300 hover:text-white text-sm font-medium rounded-lg border border-slate-700/50 hover:border-slate-600 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.559 8.855c.166 1.183.789 3.207 3.087 4.079C11 13.829 11 14.534 11 15v.163c-1.44.434-2.5 1.757-2.5 3.337 0 1.93 1.57 3.5 3.5 3.5s3.5-1.57 3.5-3.5c0-1.58-1.06-2.903-2.5-3.337V15c0-.466 0-1.171 2.354-2.065 2.298-.872 2.921-2.896 3.087-4.079C19.912 8.441 21 7.102 21 5.5 21 3.57 19.43 2 17.5 2S14 3.57 14 5.5c0 1.552 1.022 2.855 2.424 3.313-.146.735-.565 1.791-1.778 2.252-1.192.452-2.053.953-2.646 1.536-.593-.583-1.453-1.084-2.646-1.536-1.213-.461-1.632-1.517-1.778-2.252C8.978 8.355 10 7.052 10 5.5 10 3.57 8.43 2 6.5 2S3 3.57 3 5.5c0 1.602 1.088 2.941 2.559 3.355zM17.5 4c.827 0 1.5.673 1.5 1.5S18.327 7 17.5 7 16 6.327 16 5.5 16.673 4 17.5 4zm-11 0C7.327 4 8 4.673 8 5.5S7.327 7 6.5 7 5 6.327 5 5.5 5.673 4 6.5 4zm5.5 16c-.827 0-1.5-.673-1.5-1.5S11.173 17 12 17s1.5.673 1.5 1.5S12.827 20 12 20z"/>
            </svg>
            Fork
          </a>
          <a
            href="https://github.com/dmytro-yemelianov/raps/issues"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800/50 hover:bg-slate-800 text-slate-300 hover:text-white text-sm font-medium rounded-lg border border-slate-700/50 hover:border-slate-600 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
            Issues
          </a>
          <a
            href="https://github.com/dmytro-yemelianov/raps/discussions"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800/50 hover:bg-slate-800 text-slate-300 hover:text-white text-sm font-medium rounded-lg border border-slate-700/50 hover:border-slate-600 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M21 6h-2V4.5C19 3.12 17.88 2 16.5 2h-9C6.12 2 5 3.12 5 4.5V6H3c-.55 0-1 .45-1 1v12c0 .55.45 1 1 1h8v3l3-3h7c.55 0 1-.45 1-1V7c0-.55-.45-1-1-1zm-1 12h-6.17L12 19.83V18H4V8h16v10z"/>
            </svg>
            Discuss
          </a>
        </div>
        
        <!-- Terminal Demo -->
        <TerminalDemo class="max-w-3xl mx-auto" />
      </div>
    </div>
  </section>
  
  <!-- Stats Section -->
  <section class="py-12 border-y border-slate-800/50 bg-slate-900/30 backdrop-blur-sm">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center group">
            <div class="text-3xl sm:text-4xl font-display font-black text-white mb-1 group-hover:text-rapeseed-400 transition-colors">{stat.value}</div>
            <div class="text-sm text-slate-400">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Start Section -->
  <section class="py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="max-w-3xl mb-10">
        <p class="text-rapeseed-400 font-semibold text-sm uppercase tracking-[0.2em] mb-3">Get started</p>
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-4">Automation in three steps</h2>
        <p class="text-lg text-slate-400">Install the CLI, point it at your APS app, and verify authentication before shipping a pipeline. Each step links to the detailed docs.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {quickStart.map((step, index) => (
          <div class="p-6 bg-slate-900/60 border border-slate-800 rounded-xl hover:border-rapeseed-500/50 transition-all group shadow-lg shadow-rapeseed-900/10">
            <div class="flex items-center justify-between mb-4">
              <div class="w-10 h-10 rounded-lg bg-rapeseed-500/10 border border-rapeseed-500/30 text-rapeseed-300 flex items-center justify-center font-display font-black">
                {(index + 1).toString().padStart(2, '0')}
              </div>
              <a href={step.href} class="text-sm text-primary-300 hover:text-primary-200 font-medium flex items-center gap-1">
                {step.link}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            <h3 class="text-xl font-semibold text-white mb-2 font-display">{step.title}</h3>
            <p class="text-slate-400 text-sm leading-relaxed mb-4">{step.description}</p>
            <div class="bg-slate-950/60 border border-slate-800 rounded-lg p-4 font-mono text-sm text-slate-200">$ {step.command}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-4">
          Everything you need for APS automation
        </h2>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
          From authentication to model translation, RAPS provides comprehensive coverage
          of Autodesk Platform Services APIs.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class={`p-6 bg-gradient-to-br ${feature.gradient} border border-slate-800/50 rounded-xl hover:border-slate-700 transition-all group hover:scale-[1.02] hover:shadow-xl`}>
            <div class="text-3xl mb-4 group-hover:scale-110 transition-transform">{feature.icon}</div>
            <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-rapeseed-400 transition-colors font-display">
              {feature.title}
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why RAPS Section -->
  <section class="py-20 sm:py-28 bg-slate-900/50 border-y border-slate-800/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-8">
            Why <span class="text-rapeseed-400">RAPS</span>?
          </h2>
          <div class="space-y-6">
            {whyRaps.map((item) => (
              <div class="flex gap-4 group">
                <div class={`flex-shrink-0 w-10 h-10 ${item.color} rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform`}>
                  <Fragment set:html={item.icon} />
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1 font-display">{item.title}</h3>
                  <p class="text-slate-400 text-sm leading-relaxed">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Code example -->
        <div class="bg-slate-900 rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
          <div class="flex items-center justify-between px-4 py-3 bg-slate-800/50 border-b border-slate-800">
            <span class="text-sm text-slate-400 font-mono">pipeline.yml</span>
            <button id="copy-pipeline" class="p-1.5 text-slate-500 hover:text-slate-300 transition-colors rounded hover:bg-slate-700/50" title="Copy">
              <svg class="w-4 h-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <svg class="w-4 h-4 check-icon hidden text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </button>
          </div>
          <div class="p-6 font-mono text-sm overflow-x-auto">
            <pre class="text-slate-300"><code><span class="text-slate-500"># GitHub Actions workflow</span>
<span class="text-rapeseed-400">name:</span> APS Model Pipeline

<span class="text-rapeseed-400">on:</span>
  <span class="text-rapeseed-400">push:</span>
    <span class="text-rapeseed-400">paths:</span>
      - <span class="text-green-400">'models/**'</span>

<span class="text-rapeseed-400">jobs:</span>
  <span class="text-rapeseed-400">translate:</span>
    <span class="text-rapeseed-400">runs-on:</span> ubuntu-latest
    <span class="text-rapeseed-400">steps:</span>
      - <span class="text-rapeseed-400">run:</span> raps auth test
      - <span class="text-rapeseed-400">run:</span> |
          raps object upload $BUCKET model.rvt
          raps translate start $URN --wait
          raps translate manifest $URN -o json</code></pre>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <section class="py-20 sm:py-28">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-6">
          Built by an APS Expert
        </h2>
        <p class="text-lg text-slate-400 mb-8 leading-relaxed">
          RAPS is created by Dmytro Yemelianov, an Autodesk Expert Elite with 15+ years
          of experience in Autodesk platform development. ADN member since 2012.
        </p>
        <div class="flex items-center justify-center gap-4 flex-wrap">
          <a
            href="/about"
            class="px-6 py-2.5 bg-slate-800 hover:bg-slate-700 text-white font-medium rounded-lg transition-colors border border-slate-700"
          >
            Learn More
          </a>
          <a
            href="https://www.linkedin.com/in/dmytro-yemelianov/"
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-2.5 text-slate-400 hover:text-white font-medium transition-colors flex items-center gap-2"
          >
            Connect on LinkedIn
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 sm:py-28 bg-gradient-to-b from-primary-950/30 via-rapeseed-950/10 to-slate-950 border-t border-slate-800/50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 text-center">
      <div class="inline-block text-6xl mb-6 animate-bounce">üåº</div>
      <h2 class="text-3xl sm:text-4xl font-display font-black text-white mb-6">
        Ready to automate your APS workflow?
