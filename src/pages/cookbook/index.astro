---
import CookbookLayout from '../../layouts/CookbookLayout.astro';
import { getCollection } from 'astro:content';
import { stripLocalePrefix, getLangFromUrl, useTranslations, getLocalizedUrl } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url, Astro.currentLocale);
const t = useTranslations(lang);

const allCookbook = (await getCollection('cookbook')).filter(d => d.id.startsWith('en/'));

const getDocSlug = (doc: any) => {
  const raw = doc.slug || doc.id || '';
  return stripLocalePrefix(raw.replace(/\.mdx?$/, ''));
};

const categories = [
  {
    id: 'aec',
    title: t('cookbook.sidebar.aec'),
    icon: 'ðŸ—ï¸',
    description: t('cookbook.index.aec_desc'),
    color: 'blue',
    landing: 'cookbook-aec',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-aec'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-aec-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'construction',
    title: t('cookbook.sidebar.construction'),
    icon: 'ðŸš§',
    description: t('cookbook.index.construction_desc'),
    color: 'orange',
    landing: 'cookbook-construction',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-construction'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-acc-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'manufacturing',
    title: t('cookbook.sidebar.manufacturing'),
    icon: 'âš™ï¸',
    description: t('cookbook.index.manufacturing_desc'),
    color: 'purple',
    landing: 'cookbook-manufacturing',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-manufacturing'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-mfg-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
  {
    id: 'media',
    title: t('cookbook.sidebar.media'),
    icon: 'ðŸŽ¬',
    description: t('cookbook.index.media_desc'),
    color: 'emerald',
    landing: 'cookbook-media',
    items: [
      allCookbook.find(d => getDocSlug(d) === 'cookbook-media'),
      ...allCookbook.filter(d => getDocSlug(d).startsWith('cookbook-media-')).sort((a, b) => a.data.order - b.data.order)
    ].filter(Boolean)
  },
];
---

<CookbookLayout title={t('cookbook.index.title')} currentSlug="">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="mb-12 border-b border-slate-800 pb-8">
      <h1 class="text-4xl font-display font-bold text-white mb-4">{t('cookbook.index.title')}</h1>
      <p class="text-lg text-slate-400 max-w-2xl">
        {t('cookbook.index.subtitle')}
      </p>
    </div>

    <!-- Category Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {categories.map(cat => (
        <a
          href={getLocalizedUrl(lang, `/cookbook/${cat.landing}`)}
          class="group block p-6 bg-slate-900/50 border border-slate-800 rounded-xl hover:border-slate-700 hover:bg-slate-900/80 transition-all"
        >
          <div class="flex items-start gap-4">
            <span class="text-3xl">{cat.icon}</span>
            <div class="flex-1">
              <h2 class="text-xl font-bold text-white group-hover:text-rapeseed-400 transition-colors mb-2">
                {cat.title}
              </h2>
              <p class="text-sm text-slate-400 mb-4">{cat.description}</p>
              <div class="text-xs text-slate-500">
                {cat.items.length} {cat.items.length === 1 ? t('cookbook.index.recipe') : t('cookbook.index.recipes')}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- All Recipes by Category -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-12">
      {categories.map(cat => (
        cat.items.length > 0 && (
          <div>
            <h3 class="text-sm font-semibold text-rapeseed-400 uppercase tracking-wider mb-4">{cat.title}</h3>
            <ul class="space-y-2">
              {cat.items.map(doc => (
                <li class="flex items-start">
                  <div class="flex-shrink-0 w-4 h-4 flex items-center justify-center mt-0.5 mr-3">
                    <span class="w-1.5 h-1.5 rounded-full bg-rapeseed-400/60 transition-colors"></span>
                  </div>
                  <a
                    href={getLocalizedUrl(lang, `/cookbook/${getDocSlug(doc)}`)}
                    class="text-slate-400 hover:text-white transition-colors hover:underline underline-offset-2"
                  >
                    {doc.data.title.replace(/^Cookbook:\s*/i, '').replace(/^Recipe:\s*/i, '')}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )
      ))}
    </div>

    <!-- Help Section -->
    <div class="mt-20 pt-10 border-t border-slate-800 text-center sm:text-left flex flex-col sm:flex-row justify-between items-center gap-6">
      <div>
        <h3 class="text-white font-semibold mb-1">{t('cookbook.index.need_help')}</h3>
        <p class="text-slate-400 text-sm">{t('cookbook.index.need_help_desc')}</p>
      </div>
      <div class="flex gap-4">
        <a href={getLocalizedUrl(lang, '/docs')} class="text-sm font-medium text-rapeseed-400 hover:text-rapeseed-300 transition-colors">
          {t('docs.sidebar.title')} &rarr;
        </a>
        <a href="https://github.com/dmytro-yemelianov/raps/issues" target="_blank" class="text-sm font-medium text-slate-400 hover:text-white transition-colors">
          GitHub Issues &nearr;
        </a>
      </div>
    </div>
  </div>
</CookbookLayout>
