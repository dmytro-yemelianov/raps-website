---
import BaseLayout from '../layouts/BaseLayout.astro';
import DownloadButton from '../components/DownloadButton.astro';

const features = [
  {
    icon: 'üèóÔ∏è',
    title: 'ACC Integration',
    description: 'Full Autodesk Construction Cloud support: Issues, RFIs, Assets, Submittals, Checklists.',
    gradient: 'from-orange-500/20 to-amber-500/20',
  },
  {
    icon: '‚öôÔ∏è',
    title: 'Design Automation',
    description: 'Manage engines, activities, and work items for batch CAD processing.',
    gradient: 'from-rose-500/20 to-pink-500/20',
  },
  {
    icon: 'üì∏',
    title: 'Reality Capture',
    description: 'Photogrammetry processing for creating 3D models from photos.',
    gradient: 'from-cyan-500/20 to-blue-500/20',
  },
  {
    icon: 'üîî',
    title: 'Webhooks',
    description: 'Subscribe to APS events and automate workflows with webhook integrations.',
    gradient: 'from-purple-500/20 to-violet-500/20',
  },
  {
    icon: 'üîÑ',
    title: 'Pipeline Automation',
    description: 'YAML/JSON workflow automation for complex multi-step processes.',
    gradient: 'from-emerald-500/20 to-teal-500/20',
  },
  {
    icon: 'üîå',
    title: 'Plugin System',
    description: 'Extend RAPS with custom commands, hooks, and aliases.',
    gradient: 'from-indigo-500/20 to-blue-500/20',
  },
];

const benefits = [
  {
    title: 'Open Source',
    description: 'Apache 2.0 licensed. Free forever for community use.',
    icon: 'üìú',
  },
  {
    title: 'Full Feature Access',
    description: 'All Community tier features included. No limitations.',
    icon: '‚ú®',
  },
  {
    title: 'Active Development',
    description: 'Regular updates, community contributions, and feature requests.',
    icon: 'üöÄ',
  },
  {
    title: 'Community Support',
    description: 'GitHub Discussions, issues, and community-driven help.',
    icon: 'üí¨',
  },
