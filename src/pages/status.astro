---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLatestRelease, getLatestReleases } from '../data/releases.js';

const latestRelease = getLatestRelease();
const recentReleases = getLatestReleases(5);

// Distribution channel statuses
// In production, these could be fetched from actual monitoring APIs
const distributionStatus = [
  {
    name: 'crates.io',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://crates.io/crates/raps-cli',
    icon: 'ü¶Ä',
  },
  {
    name: 'Homebrew',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://github.com/dmytro-yemelianov/homebrew-tap',
    icon: 'üç∫',
  },
  {
    name: 'Scoop',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://github.com/dmytro-yemelianov/scoop-bucket',
    icon: 'ü™£',
  },
  {
    name: 'npm',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://www.npmjs.com/package/@rapscli/raps',
    icon: 'üì¶',
  },
  {
    name: 'PyPI',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://pypi.org/project/raps-aps/',
    icon: 'üêç',
  },
  {
    name: 'Docker Hub',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: 'https://hub.docker.com/r/rapscli/raps',
    icon: 'üê≥',
  },
  {
    name: 'GitHub Releases',
    status: 'operational',
    version: latestRelease.version,
    lastSync: latestRelease.date,
    url: `https://github.com/dmytro-yemelianov/raps/releases/tag/v${latestRelease.version}`,
    icon: 'üì•',
  },
];

// CI/CD pipeline status
const cicdStatus = {
  status: 'operational',
  lastBuild: latestRelease.date,
  pipelines: [
    {
      name: 'Release',
      status: 'success',
      lastRun: latestRelease.date,
      url: 'https://github.com/dmytro-yemelianov/raps/actions/workflows/release.yml',
    },
    {
      name: 'CI',
      status: 'success',
      lastRun: latestRelease.date,
      url: 'https://github.com/dmytro-yemelianov/raps/actions/workflows/ci.yml',
    },
    {
      name: 'Tests',
      status: 'success',
      lastRun: latestRelease.date,
      url: 'https://github.com/dmytro-yemelianov/raps/actions',
    },
  ],
};

// Get status badge info
function getStatusBadge(status) {
  switch (status) {
    case 'operational':
      return { color: 'green', label: 'Operational', icon: '‚úì' };
    case 'degraded':
      return { color: 'yellow', label: 'Degraded', icon: '‚ö†' };
    case 'outage':
      return { color: 'red', label: 'Outage', icon: '‚úó' };
    default:
      return { color: 'gray', label: 'Unknown', icon: '?' };
  }
}
---

<BaseLayout 
  title="Status" 
  description="RAPS release status, distribution channel availability, and build pipeline health."
>
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 sm:pt-32 sm:pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary-900/20 via-slate-950 to-slate-950 pointer-events-none"></div>
    <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-slate-800 to-transparent"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 z-10">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-6xl font-display font-black text-white mb-6">
          <span class="text-transparent bg-clip-text bg-gradient-to-br from-white via-slate-200 to-slate-500">
            System Status
          </span>
        </h1>
        <p class="text-lg sm:text-xl text-slate-400 mb-8">
          Real-time status of RAPS releases, distribution channels, and build pipelines.
        </p>
        
        <!-- Overall Status -->
        <div class="inline-flex items-center gap-3 px-8 py-4 rounded-full bg-green-500/10 border border-green-500/20 backdrop-blur-md">
          <span class="flex h-3 w-3 relative">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          <span class="text-lg font-bold text-green-400">All Systems Operational</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Current Release -->
  <section class="py-12 bg-slate-900/30 border-y border-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl font-display font-bold text-white mb-6">Current Release</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-sm text-slate-500 mb-2">Version</div>
          <div class="text-3xl font-bold text-rapeseed-400">v{latestRelease.version}</div>
        </div>
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-sm text-slate-500 mb-2">Release Date</div>
          <div class="text-2xl font-bold text-white">{latestRelease.date}</div>
        </div>
        <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
          <div class="text-sm text-slate-500 mb-2">Release Type</div>
          <div class="flex items-center gap-2">
            <span class={`px-3 py-1 rounded-full text-sm font-semibold ${
              latestRelease.type === 'major' ? 'bg-red-500/10 text-red-400 border border-red-500/20' :
              latestRelease.type === 'minor' ? 'bg-blue-500/10 text-blue-400 border border-blue-500/20' :
              'bg-green-500/10 text-green-400 border border-green-500/20'
            }`}>
              {latestRelease.type}
            </span>
          </div>
        </div>
      </div>
      
      <!-- Highlights -->
      <div class="mt-6 p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
        <div class="text-sm text-slate-500 mb-3">Highlights</div>
        <div class="flex flex-wrap gap-2">
          {latestRelease.highlights.map((highlight) => (
            <span class="px-3 py-1.5 rounded-lg bg-slate-800/50 text-slate-300 text-sm">
              {highlight}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Distribution Channels -->
  <section class="py-16 sm:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-3xl font-display font-black text-white mb-2">Distribution Channels</h2>
          <p class="text-slate-400">Status and version information for all package managers</p>
        </div>
        <a 
          href="/distributions" 
          class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-300 hover:text-white text-sm font-semibold transition-colors"
        >
          View All Channels ‚Üí
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {distributionStatus.map((channel) => {
          const badge = getStatusBadge(channel.status);
          return (
            <a 
              href={channel.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group p-6 bg-slate-900/50 border border-slate-800 rounded-xl hover:bg-slate-900 hover:border-slate-700 transition-all"
            >
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                  <span class="text-3xl">{channel.icon}</span>
                  <div>
                    <h3 class="text-lg font-bold text-white group-hover:text-rapeseed-400 transition-colors">{channel.name}</h3>
                    <p class="text-sm text-slate-500">v{channel.version}</p>
                  </div>
                </div>
                <span class={`px-2 py-1 rounded text-xs font-semibold bg-${badge.color}-500/10 text-${badge.color}-400 border border-${badge.color}-500/20`}>
                  {badge.icon}
                </span>
              </div>
              <div class="text-xs text-slate-500">
                Last sync: {channel.lastSync}
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CI/CD Status -->
  <section class="py-16 bg-slate-900/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl font-display font-black text-white mb-8">Build Pipelines</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {cicdStatus.pipelines.map((pipeline) => (
          <a 
            href={pipeline.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group p-6 bg-slate-900/50 border border-slate-800 rounded-xl hover:bg-slate-900 hover:border-slate-700 transition-all"
          >
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-bold text-white group-hover:text-rapeseed-400 transition-colors">{pipeline.name}</h3>
              <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-500/10 text-green-400 border border-green-500/20">
                ‚úì {pipeline.status}
              </span>
            </div>
            <div class="text-sm text-slate-500">
              Last run: {pipeline.lastRun}
            </div>
            <div class="mt-4 text-sm text-slate-400 group-hover:text-slate-300 flex items-center gap-2 transition-colors">
              View on GitHub
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Releases -->
  <section class="py-16 sm:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-3xl font-display font-black text-white mb-2">Recent Releases</h2>
          <p class="text-slate-400">Latest version history</p>
        </div>
        <a 
          href="/changelog" 
          class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-300 hover:text-white text-sm font-semibold transition-colors"
        >
          View Full Changelog ‚Üí
        </a>
      </div>

      <div class="space-y-4">
        {recentReleases.map((release, index) => (
          <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
            <div class="flex flex-wrap items-center gap-4 mb-3">
              <h3 class="text-xl font-bold text-white">v{release.version}</h3>
              <span class={`px-2 py-0.5 rounded text-xs font-semibold ${
                release.type === 'major' ? 'bg-red-500/10 text-red-400' :
                release.type === 'minor' ? 'bg-blue-500/10 text-blue-400' :
                'bg-green-500/10 text-green-400'
              }`}>
                {release.type}
              </span>
              {index === 0 && (
                <span class="px-2 py-0.5 rounded text-xs font-semibold bg-rapeseed-500/10 text-rapeseed-400">
                  Latest
                </span>
              )}
              <span class="text-sm text-slate-500">{release.date}</span>
            </div>
            <div class="flex flex-wrap gap-2">
              {release.highlights.map((highlight) => (
                <span class="text-sm text-slate-400">
                  <span class="text-rapeseed-400">‚Ä¢</span> {highlight}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Subscribe to Updates -->
  <section class="py-16 bg-slate-900/30 border-t border-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl font-display font-bold text-white mb-4">Stay Updated</h2>
      <p class="text-slate-400 text-lg mb-8">
        Get notified about new releases and status updates
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/rss.xml" 
          target="_blank"
          class="px-6 py-3 rounded-lg bg-orange-500/10 hover:bg-orange-500/20 text-orange-400 border border-orange-500/20 hover:border-orange-500/30 font-semibold transition-colors"
        >
          üì° RSS Feed
        </a>
        <a 
          href="/atom.xml" 
          target="_blank"
          class="px-6 py-3 rounded-lg bg-blue-500/10 hover:bg-blue-500/20 text-blue-400 border border-blue-500/20 hover:border-blue-500/30 font-semibold transition-colors"
        >
          ‚öõÔ∏è Atom Feed
        </a>
        <a 
          href="https://github.com/dmytro-yemelianov/raps/releases" 
          target="_blank"
          class="px-6 py-3 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-300 hover:text-white border border-slate-700 hover:border-slate-600 font-semibold transition-colors"
        >
          üì• GitHub Releases
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
