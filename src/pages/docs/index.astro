---
import DocsLayout from '../../layouts/DocsLayout.astro';
import { getCollection } from 'astro:content';

const allDocs = await getCollection('docs');

// Organize docs by section
const sections = {
  'getting-started': {
    title: 'Getting Started',
    description: 'Installation and setup',
    docs: allDocs.filter(d => d.data.section === 'getting-started').sort((a, b) => a.data.order - b.data.order),
  },
  'commands': {
    title: 'Commands',
    description: 'CLI command reference',
    docs: allDocs.filter(d => d.data.section === 'commands').sort((a, b) => a.data.order - b.data.order),
  },
  'guides': {
    title: 'Guides',
    description: 'Tutorials and workflows',
    docs: allDocs.filter(d => d.data.section === 'guides').sort((a, b) => a.data.order - b.data.order),
  },
  'reference': {
    title: 'Reference',
    description: 'Specifications and deep dives',
    docs: allDocs.filter(d => d.data.section === 'reference').sort((a, b) => a.data.order - b.data.order),
  },
};

// Cookbook groups
const cookbookDocs = allDocs.filter(d => d.data.section === 'cookbook');
const cookbookGroups = {
  'ACC & Construction': cookbookDocs.filter(d => (d.id || d.slug || '').includes('acc') || (d.id || d.slug || '').includes('construction')),
  'AEC & BIM': cookbookDocs.filter(d => (d.id || d.slug || '').includes('aec')),
  'Manufacturing': cookbookDocs.filter(d => (d.id || d.slug || '').includes('mfg') || (d.id || d.slug || '').includes('manufacturing')),
  'Media & Entertainment': cookbookDocs.filter(d => (d.id || d.slug || '').includes('media')),
};
---

<DocsLayout title="Documentation" currentSlug="">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="mb-12 border-b border-slate-800 pb-8">
      <h1 class="text-4xl font-display font-bold text-white mb-4">Documentation</h1>
      <p class="text-lg text-slate-400 max-w-2xl">
        Complete reference for the RAPS CLI, including installation guides, command usage, and workflow recipes.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-16">
      {Object.entries(sections).map(([key, section]) => (
        section.docs.length > 0 && (
          <div>
            <div class="mb-6">
              <h2 class="text-lg font-bold text-white mb-1">{section.title}</h2>
              <p class="text-sm text-slate-500">{section.description}</p>
            </div>
            
            <ul class="space-y-2">
              {section.docs.map(doc => (
                <li class="flex items-start">
                  <div class="flex-shrink-0 w-4 h-4 flex items-center justify-center mt-0.5 mr-3">
                    <span class="w-1.5 h-1.5 rounded-full bg-rapeseed-400 transition-colors"></span>
                  </div>
                  <a 
                    href={`/docs/${(doc.id || doc.slug || '').replace(/\.mdx?$/, '')}`}
                    class="text-slate-300 hover:text-white transition-colors hover:underline underline-offset-2"
                  >
                    {doc.data.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )
      ))}

      {/* Cookbook Section with Groups */}
      <div class="md:col-span-2 lg:col-span-3 mt-8 pt-8 border-t border-slate-800">
        <div class="mb-8">
          <h2 class="text-xl font-bold text-white mb-1">Cookbook</h2>
          <p class="text-sm text-slate-500">Real-world recipes and industry workflows</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-12 gap-y-12">
          {Object.entries(cookbookGroups).map(([groupTitle, docs]) => (
            docs.length > 0 && (
              <div>
                <h3 class="text-sm font-semibold text-rapeseed-400 uppercase tracking-wider mb-4">{groupTitle}</h3>
                <ul class="space-y-2">
                  {docs.map(doc => (
                    <li class="flex items-start">
                      <div class="flex-shrink-0 w-4 h-4 flex items-center justify-center mt-0.5 mr-3">
                        <span class="w-1.5 h-1.5 rounded-full bg-rapeseed-400/60 transition-colors"></span>
                      </div>
                      <a 
                        href={`/docs/${(doc.id || doc.slug || '').replace(/\.mdx?$/, '')}`}
                        class="text-slate-400 hover:text-white transition-colors hover:underline underline-offset-2"
                      >
                        {doc.data.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )
          ))}
        </div>
      </div>
    </div>
    
    <!-- Support Section -->
    <div class="mt-20 pt-10 border-t border-slate-800 text-center sm:text-left flex flex-col sm:flex-row justify-between items-center gap-6">
      <div>
        <h3 class="text-white font-semibold mb-1">Need help?</h3>
        <p class="text-slate-400 text-sm">Check the troubleshooting guide or join our community.</p>
      </div>
      <div class="flex gap-4">
        <a href="/docs/troubleshooting" class="text-sm font-medium text-rapeseed-400 hover:text-rapeseed-300 transition-colors">
          Troubleshooting →
        </a>
        <a href="https://github.com/dmytro-yemelianov/raps/issues" target="_blank" class="text-sm font-medium text-slate-400 hover:text-white transition-colors">
          GitHub Issues ↗
        </a>
      </div>
    </div>
  </div>
</DocsLayout>
